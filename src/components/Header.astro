---
import { brand } from '../data/brand';

const navLinks = [
  { href: '/finishes', label: 'Finishes' },
  { href: '/work', label: 'Work' },
  { href: '/process', label: 'Process' },
  { href: '/bespoke', label: 'Bespoke' },
  { href: '/professionals', label: 'For Trade' },
  { href: '/estimate', label: 'Estimate' },
  { href: '/showroom', label: 'Material Library' },
];

const currentPath = Astro.url.pathname;
const phoneHref = `tel:${brand.phone.replace(/[^0-9+]/g, '')}`;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-charcoal border-b border-charcoal-border">
  <div class="max-w-6xl mx-auto px-6 py-4">
    <nav class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="block">
        <img
          src="/images/headland-seal.svg"
          alt={brand.siteName}
          class="h-10 sm:h-12 w-auto"
        />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        {navLinks.map(({ href, label }) => (
          <a
            href={href}
            class:list={[
              'text-sm tracking-wide transition-colors',
              currentPath === href || currentPath.startsWith(href + '/')
                ? 'text-brass'
                : 'text-ivory/60 hover:text-ivory'
            ]}
          >
            {label}
          </a>
        ))}
      </div>

      <!-- Phone CTA -->
      <div class="hidden lg:flex items-center gap-6">
        <a
          href={phoneHref}
          class="text-sm text-ivory/50 hover:text-ivory transition-colors"
        >
          {brand.phone}
        </a>
        <a
          href="/contact"
          class="px-5 py-2 bg-brass text-charcoal text-sm tracking-wide hover:bg-brass-light transition-colors"
        >
          Get in Touch
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-ivory/70"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </nav>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-charcoal-border">
    <div class="px-6 py-6 space-y-4 bg-charcoal">
      {navLinks.map(({ href, label }) => (
        <a
          href={href}
          class="block text-ivory/60 hover:text-ivory transition-colors text-sm"
        >
          {label}
        </a>
      ))}
      <div class="pt-4 border-t border-charcoal-border">
        <a href={phoneHref} class="block text-ivory/50 text-sm mb-4">
          {brand.phone}
        </a>
        <a
          href="/contact"
          class="inline-block px-5 py-2 bg-brass text-charcoal text-sm tracking-wide"
        >
          Get in Touch
        </a>
      </div>
    </div>
  </div>
</header>

<!-- Spacer for fixed header -->
<div class="h-[80px]"></div>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
