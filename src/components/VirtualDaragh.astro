---
// VirtualDaragh - AI Chat Assistant for Old Head Plaster
// A floating chat widget powered by Claude API

const suggestedQuestions = [
  "What finish is best for a bathroom?",
  "How much does Venetian plaster cost?",
  "Can I see samples before deciding?",
  "What makes your process different?"
];
---

<!-- Chat Button (Floating) - Full Illustration -->
<button id="daragh-chat-btn" class="vd-badge" type="button" aria-label="Open Virtual Daragh">
  <img src="/images/virtual-daragh-badge.png" alt="Virtual Daragh - Ask me anything" class="vd-badge-img" />
</button>

<!-- Chat Panel -->
<div
  id="daragh-chat-panel"
  class="fixed bottom-24 right-6 z-50 w-96 max-w-[calc(100vw-3rem)] bg-charcoal border border-cream/20 shadow-2xl rounded-lg overflow-hidden transform translate-y-4 opacity-0 pointer-events-none transition-all duration-300 flex flex-col"
  style="max-height: calc(100vh - 8rem);"
>
  <!-- Header -->
  <div class="bg-charcoal-light border-b border-cream/10 p-4 flex items-center justify-between">
    <div class="flex items-center gap-3">
      <div class="w-10 h-10 bg-bronze/20 rounded-full flex items-center justify-center">
        <svg class="w-5 h-5 text-bronze" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
      </div>
      <div>
        <h3 class="text-cream font-heading text-sm">Virtual Daragh</h3>
        <p class="text-cream/50 text-xs">Plaster Expert</p>
      </div>
    </div>
    <button id="daragh-close-btn" class="text-cream/50 hover:text-cream transition-colors">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>

  <!-- Messages Container -->
  <div id="daragh-messages" class="flex-1 overflow-y-auto p-4 space-y-4" style="min-height: 300px; max-height: 400px;">
    <!-- Welcome Message -->
    <div class="flex gap-3">
      <div class="w-8 h-8 bg-bronze/20 rounded-full flex items-center justify-center flex-shrink-0">
        <svg class="w-4 h-4 text-bronze" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
      </div>
      <div class="bg-charcoal-light border border-cream/10 rounded-lg p-3 max-w-[85%]">
        <p class="text-cream/90 text-sm leading-relaxed">
          Welcome! I'm Virtual Daragh, here to help you explore decorative plaster options. What would you like to know?
        </p>
      </div>
    </div>

    <!-- Suggested Questions -->
    <div id="daragh-suggestions" class="flex flex-wrap gap-2 pl-11">
      {suggestedQuestions.map(q => (
        <button class="suggestion-btn px-3 py-1.5 bg-bronze/10 border border-bronze/30 text-bronze text-xs rounded-full hover:bg-bronze/20 transition-colors">
          {q}
        </button>
      ))}
    </div>
  </div>

  <!-- Typing Indicator (hidden by default) -->
  <div id="daragh-typing" class="hidden px-4 pb-2">
    <div class="flex gap-3">
      <div class="w-8 h-8 bg-bronze/20 rounded-full flex items-center justify-center flex-shrink-0">
        <svg class="w-4 h-4 text-bronze" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
      </div>
      <div class="bg-charcoal-light border border-cream/10 rounded-lg px-4 py-3">
        <div class="flex gap-1">
          <div class="w-2 h-2 bg-cream/40 rounded-full animate-bounce" style="animation-delay: 0ms;"></div>
          <div class="w-2 h-2 bg-cream/40 rounded-full animate-bounce" style="animation-delay: 150ms;"></div>
          <div class="w-2 h-2 bg-cream/40 rounded-full animate-bounce" style="animation-delay: 300ms;"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Input Area -->
  <div class="border-t border-cream/10 p-4">
    <form id="daragh-form" class="flex gap-2">
      <input
        type="text"
        id="daragh-input"
        placeholder="Ask about plaster finishes..."
        class="flex-1 px-4 py-2 bg-charcoal-light border border-cream/20 rounded-lg text-cream text-sm placeholder:text-cream/40 focus:border-bronze focus:outline-none"
        autocomplete="off"
      />
      <button
        type="submit"
        class="px-4 py-2 bg-bronze text-charcoal rounded-lg hover:bg-bronze/90 transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
        </svg>
      </button>
    </form>
    <p class="text-cream/30 text-xs text-center mt-2">
      Powered by AI. For specific quotes, <a href="/contact" class="text-bronze hover:underline">contact us</a>.
    </p>
  </div>
</div>

<!-- Mobile Full Screen Chat -->
<div
  id="daragh-mobile-panel"
  class="fixed inset-0 z-50 bg-charcoal transform translate-y-full transition-transform duration-300 md:hidden flex flex-col"
>
  <!-- Mobile Header -->
  <div class="bg-charcoal-light border-b border-cream/10 p-4 flex items-center justify-between safe-area-top">
    <div class="flex items-center gap-3">
      <div class="w-10 h-10 bg-bronze/20 rounded-full flex items-center justify-center">
        <svg class="w-5 h-5 text-bronze" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
      </div>
      <div>
        <h3 class="text-cream font-heading">Virtual Daragh</h3>
        <p class="text-cream/50 text-xs">Plaster Expert</p>
      </div>
    </div>
    <button id="daragh-mobile-close" class="text-cream/50 hover:text-cream transition-colors p-2">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>

  <!-- Mobile Messages -->
  <div id="daragh-mobile-messages" class="flex-1 overflow-y-auto p-4 space-y-4">
    <!-- Cloned from desktop -->
  </div>

  <!-- Mobile Typing Indicator -->
  <div id="daragh-mobile-typing" class="hidden px-4 pb-2">
    <div class="flex gap-3">
      <div class="w-8 h-8 bg-bronze/20 rounded-full flex items-center justify-center flex-shrink-0">
        <svg class="w-4 h-4 text-bronze" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
      </div>
      <div class="bg-charcoal-light border border-cream/10 rounded-lg px-4 py-3">
        <div class="flex gap-1">
          <div class="w-2 h-2 bg-cream/40 rounded-full animate-bounce" style="animation-delay: 0ms;"></div>
          <div class="w-2 h-2 bg-cream/40 rounded-full animate-bounce" style="animation-delay: 150ms;"></div>
          <div class="w-2 h-2 bg-cream/40 rounded-full animate-bounce" style="animation-delay: 300ms;"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Mobile Input -->
  <div class="border-t border-cream/10 p-4 safe-area-bottom">
    <form id="daragh-mobile-form" class="flex gap-2">
      <input
        type="text"
        id="daragh-mobile-input"
        placeholder="Ask about plaster finishes..."
        class="flex-1 px-4 py-3 bg-charcoal-light border border-cream/20 rounded-lg text-cream placeholder:text-cream/40 focus:border-bronze focus:outline-none"
        autocomplete="off"
      />
      <button
        type="submit"
        class="px-4 py-3 bg-bronze text-charcoal rounded-lg hover:bg-bronze/90 transition-colors"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
        </svg>
      </button>
    </form>
  </div>
</div>

<style is:global>
  .safe-area-top {
    padding-top: max(1rem, env(safe-area-inset-top));
  }
  .safe-area-bottom {
    padding-bottom: max(1rem, env(safe-area-inset-bottom));
  }

  /* Virtual Daragh Badge - Full Illustration */
  .vd-badge {
    position: fixed;
    right: 18px;
    bottom: 18px;
    z-index: 9999;
    padding: 0;
    border: none;
    background: transparent;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .vd-badge:hover {
    transform: translateY(-2px) scale(1.02);
  }

  .vd-badge:focus-visible {
    outline: 2px solid rgba(197, 166, 87, 0.9);
    outline-offset: 4px;
    border-radius: 8px;
  }

  .vd-badge-img {
    height: 110px;
    width: auto;
    display: block;
    filter: drop-shadow(0 8px 24px rgba(0, 0, 0, 0.5)) sepia(100%) saturate(300%) hue-rotate(10deg) brightness(0.85);
    opacity: 0.7;
    transition: all 0.2s ease;
  }

  .vd-badge:hover .vd-badge-img {
    opacity: 1;
    filter: drop-shadow(0 8px 24px rgba(0, 0, 0, 0.5)) sepia(100%) saturate(300%) hue-rotate(10deg) brightness(0.95);
  }

  /* Mobile */
  @media (max-width: 480px) {
    .vd-badge {
      right: 12px;
      bottom: 12px;
    }
    .vd-badge-img {
      height: 85px;
      opacity: 0.65;
      filter: drop-shadow(0 6px 16px rgba(0, 0, 0, 0.5)) sepia(100%) saturate(300%) hue-rotate(10deg) brightness(0.85);
    }
  }

  /* Hide when chat is open */
  .vd-badge.scale-0 {
    transform: scale(0);
    opacity: 0;
    pointer-events: none;
  }
</style>

<script>
  // Virtual Daragh Chat Widget
  const chatBtn = document.getElementById('daragh-chat-btn');
  const chatPanel = document.getElementById('daragh-chat-panel');
  const closeBtn = document.getElementById('daragh-close-btn');
  const messagesContainer = document.getElementById('daragh-messages');
  const typingIndicator = document.getElementById('daragh-typing');
  const chatForm = document.getElementById('daragh-form');
  const chatInput = document.getElementById('daragh-input');
  const suggestions = document.getElementById('daragh-suggestions');

  // Mobile elements
  const mobilePanel = document.getElementById('daragh-mobile-panel');
  const mobileClose = document.getElementById('daragh-mobile-close');
  const mobileMessages = document.getElementById('daragh-mobile-messages');
  const mobileTyping = document.getElementById('daragh-mobile-typing');
  const mobileForm = document.getElementById('daragh-mobile-form');
  const mobileInput = document.getElementById('daragh-mobile-input');

  // Conversation state
  let conversationHistory: Array<{role: 'user' | 'assistant', content: string}> = [];
  let isOpen = false;
  let isMobile = window.innerWidth < 768;

  // Check if mobile
  function checkMobile() {
    isMobile = window.innerWidth < 768;
  }
  window.addEventListener('resize', checkMobile);

  // Open/Close chat
  function openChat() {
    isOpen = true;
    if (isMobile) {
      mobilePanel?.classList.remove('translate-y-full');
      // Clone initial content to mobile
      if (mobileMessages && messagesContainer) {
        mobileMessages.innerHTML = messagesContainer.innerHTML;
      }
    } else {
      chatPanel?.classList.remove('translate-y-4', 'opacity-0', 'pointer-events-none');
    }
    chatBtn?.classList.add('scale-0');
  }

  function closeChat() {
    isOpen = false;
    if (isMobile) {
      mobilePanel?.classList.add('translate-y-full');
    } else {
      chatPanel?.classList.add('translate-y-4', 'opacity-0', 'pointer-events-none');
    }
    setTimeout(() => {
      chatBtn?.classList.remove('scale-0');
    }, 200);
  }

  // Event listeners
  chatBtn?.addEventListener('click', openChat);
  closeBtn?.addEventListener('click', closeChat);
  mobileClose?.addEventListener('click', closeChat);

  // Handle suggestion clicks
  document.querySelectorAll('.suggestion-btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      const question = (e.target as HTMLElement).textContent?.trim();
      if (question) {
        sendMessage(question);
      }
    });
  });

  // Form submissions
  chatForm?.addEventListener('submit', (e) => {
    e.preventDefault();
    const message = chatInput?.value.trim();
    if (message) {
      sendMessage(message);
      if (chatInput) chatInput.value = '';
    }
  });

  mobileForm?.addEventListener('submit', (e) => {
    e.preventDefault();
    const message = mobileInput?.value.trim();
    if (message) {
      sendMessage(message);
      if (mobileInput) mobileInput.value = '';
    }
  });

  // Add message to UI
  function addMessage(role: 'user' | 'assistant', content: string) {
    const messageHtml = role === 'user' ? `
      <div class="flex gap-3 justify-end">
        <div class="bg-bronze/20 border border-bronze/30 rounded-lg p-3 max-w-[85%]">
          <p class="text-cream text-sm leading-relaxed">${escapeHtml(content)}</p>
        </div>
      </div>
    ` : `
      <div class="flex gap-3">
        <div class="w-8 h-8 bg-bronze/20 rounded-full flex items-center justify-center flex-shrink-0">
          <svg class="w-4 h-4 text-bronze" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <div class="bg-charcoal-light border border-cream/10 rounded-lg p-3 max-w-[85%]">
          <p class="text-cream/90 text-sm leading-relaxed whitespace-pre-wrap">${escapeHtml(content)}</p>
        </div>
      </div>
    `;

    // Add to both containers
    if (messagesContainer) {
      messagesContainer.insertAdjacentHTML('beforeend', messageHtml);
      messagesContainer.scrollTop = messagesContainer.scrollHeight;
    }
    if (mobileMessages) {
      mobileMessages.insertAdjacentHTML('beforeend', messageHtml);
      mobileMessages.scrollTop = mobileMessages.scrollHeight;
    }

    // Hide suggestions after first message
    if (suggestions && conversationHistory.length > 0) {
      suggestions.style.display = 'none';
    }
  }

  // Show/hide typing indicator
  function showTyping(show: boolean) {
    if (typingIndicator) {
      typingIndicator.classList.toggle('hidden', !show);
    }
    if (mobileTyping) {
      mobileTyping.classList.toggle('hidden', !show);
    }
    if (show) {
      messagesContainer?.scrollTo({ top: messagesContainer.scrollHeight, behavior: 'smooth' });
      mobileMessages?.scrollTo({ top: mobileMessages.scrollHeight, behavior: 'smooth' });
    }
  }

  // Escape HTML
  function escapeHtml(text: string): string {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }

  // Send message to API
  async function sendMessage(content: string) {
    // Add user message to UI
    addMessage('user', content);
    conversationHistory.push({ role: 'user', content });

    // Show typing indicator
    showTyping(true);

    try {
      const response = await fetch('/api/chat', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          messages: conversationHistory
        })
      });

      if (!response.ok) {
        throw new Error('API request failed');
      }

      const data = await response.json();
      const assistantMessage = data.message || "I'm sorry, I couldn't process that. Please try again.";

      // Hide typing and show response
      showTyping(false);
      addMessage('assistant', assistantMessage);
      conversationHistory.push({ role: 'assistant', content: assistantMessage });

    } catch (error) {
      console.error('Chat error:', error);
      showTyping(false);
      addMessage('assistant', "I'm having trouble connecting right now. Please try again in a moment, or reach out directly through our contact page.");
    }
  }

  // Close on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && isOpen) {
      closeChat();
    }
  });
</script>
