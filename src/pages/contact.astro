---
import Layout from '../layouts/Layout.astro';

const carouselImages = [
  { src: '/images/Website/20241024_135059.jpg', alt: 'Microcement bathroom with calacatta marble' },
  { src: '/images/Website/20220311_162443.jpg', alt: 'Fireplace with crown molding transition' },
  { src: '/images/Website/20241011_173659~4.jpg', alt: 'Marbled plaster close-up' },
  { src: '/images/Website/20220124_163453.jpg', alt: 'Dark venetian with depth' },
  { src: '/images/Website/20200910_093606~2.jpg', alt: 'Metallic patina texture' },
  { src: '/images/Website/20221012_132132.jpg', alt: 'Gray plaster room with oval window' },
  { src: '/images/Website/20220309_151608.jpg', alt: 'Tadelakt bathroom seamless finish' },
  { src: '/images/Website/20240913_170334.jpg', alt: 'Shower niches with perfect corners' },
];
---

<Layout title="Contact" description="Start a conversation about your decorative plaster project. We take on a limited number of projects each quarter to ensure quality.">
  <!-- Hero -->
  <section class="relative py-24 md:py-32 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-stone via-plaster/50 to-stone">
      <div class="absolute inset-0 opacity-30" style="background-image: url('data:image/svg+xml,%3Csvg viewBox=%220 0 200 200%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cfilter id=%22noise%22%3E%3CfeTurbulence type=%22fractalNoise%22 baseFrequency=%220.65%22 numOctaves=%223%22 stitchTiles=%22stitch%22/%3E%3C/filter%3E%3Crect width=%22100%25%22 height=%22100%25%22 filter=%22url(%23noise)%22/%3E%3C/svg%3E');"></div>
    </div>
    <div class="relative z-10 max-w-7xl mx-auto px-6">
      <div class="max-w-2xl">
        <div class="flex items-center gap-4 mb-6">
          <div class="w-12 h-px bg-bronze"></div>
          <p class="text-bronze text-sm tracking-[0.2em] uppercase font-medium">Start a Conversation</p>
        </div>
        <h1 class="text-charcoal mb-6">Tell Us About Your Project</h1>
        <p class="text-charcoal/70 text-xl leading-relaxed">
          We take on a limited number of projects each quarter to ensure every client receives our complete attention. If you have a project that requires decorative plaster expertise, we'd like to hear about it.
        </p>
      </div>
    </div>
  </section>

  <!-- Image Carousel -->
  <div class="bg-charcoal py-4 overflow-hidden border-t border-charcoal-border">
    <div class="carousel-track flex gap-4 animate-scroll">
      {[...carouselImages, ...carouselImages].map((img) => (
        <div class="flex-shrink-0 w-72 h-48 overflow-hidden">
          <img
            src={img.src}
            alt={img.alt}
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
            loading="lazy"
          />
        </div>
      ))}
    </div>
  </div>

  <!-- Contact Grid -->
  <section class="py-20 md:py-28 bg-cream">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 lg:gap-20">

        <!-- Form Column -->
        <div class="lg:col-span-7">
          <div class="bg-white p-8 md:p-12 shadow-[0_4px_40px_rgba(0,0,0,0.06)]">
            <div class="flex items-center gap-4 mb-10">
              <div class="w-12 h-[2px] bg-bronze"></div>
              <h2 class="text-2xl font-heading text-charcoal">Project Inquiry</h2>
            </div>

            <form action="https://formspree.io/f/YOUR_FORM_ID" method="POST" class="space-y-8">
              <!-- Client Type -->
              <div class="group">
                <label class="block text-xs tracking-[0.15em] uppercase text-charcoal/60 mb-4 font-medium">
                  I am a... <span class="text-bronze">*</span>
                </label>
                <div class="grid grid-cols-2 gap-3">
                  <label class="relative cursor-pointer">
                    <input type="radio" name="client-type" value="homeowner" class="peer sr-only" required />
                    <div class="p-4 border-2 border-stone/60 text-center transition-all duration-300 peer-checked:border-bronze peer-checked:bg-bronze/5">
                      <span class="text-charcoal/70 peer-checked:text-charcoal">Homeowner</span>
                    </div>
                  </label>
                  <label class="relative cursor-pointer">
                    <input type="radio" name="client-type" value="trade" class="peer sr-only" />
                    <div class="p-4 border-2 border-stone/60 text-center transition-all duration-300 peer-checked:border-bronze peer-checked:bg-bronze/5">
                      <span class="text-charcoal/70 peer-checked:text-charcoal">Architect / Designer</span>
                    </div>
                  </label>
                </div>
              </div>

              <!-- Name & Email Row -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="group">
                  <label for="name" class="block text-xs tracking-[0.15em] uppercase text-charcoal/60 mb-3 font-medium">
                    Name <span class="text-bronze">*</span>
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    placeholder="Your name"
                    class="w-full px-0 py-3 bg-transparent border-0 border-b-2 border-stone/60
                           focus:border-bronze focus:outline-none focus:ring-0
                           placeholder:text-charcoal/30 text-charcoal
                           transition-all duration-300"
                  />
                </div>

                <div class="group">
                  <label for="email" class="block text-xs tracking-[0.15em] uppercase text-charcoal/60 mb-3 font-medium">
                    Email <span class="text-bronze">*</span>
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    placeholder="your@email.com"
                    class="w-full px-0 py-3 bg-transparent border-0 border-b-2 border-stone/60
                           focus:border-bronze focus:outline-none focus:ring-0
                           placeholder:text-charcoal/30 text-charcoal
                           transition-all duration-300"
                  />
                </div>
              </div>

              <!-- Phone & Location Row -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="group">
                  <label for="phone" class="block text-xs tracking-[0.15em] uppercase text-charcoal/60 mb-3 font-medium">
                    Phone
                  </label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    placeholder="(000) 000-0000"
                    class="w-full px-0 py-3 bg-transparent border-0 border-b-2 border-stone/60
                           focus:border-bronze focus:outline-none focus:ring-0
                           placeholder:text-charcoal/30 text-charcoal
                           transition-all duration-300"
                  />
                </div>

                <div class="group">
                  <label for="location" class="block text-xs tracking-[0.15em] uppercase text-charcoal/60 mb-3 font-medium">
                    Project Location <span class="text-bronze">*</span>
                  </label>
                  <input
                    type="text"
                    id="location"
                    name="location"
                    required
                    placeholder="City, State"
                    class="w-full px-0 py-3 bg-transparent border-0 border-b-2 border-stone/60
                           focus:border-bronze focus:outline-none focus:ring-0
                           placeholder:text-charcoal/30 text-charcoal
                           transition-all duration-300"
                  />
                </div>
              </div>

              <!-- Project Type & Scope Row -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="group">
                  <label for="project-type" class="block text-xs tracking-[0.15em] uppercase text-charcoal/60 mb-3 font-medium">
                    Finish Type <span class="text-bronze">*</span>
                  </label>
                  <div class="relative">
                    <select
                      id="project-type"
                      name="project-type"
                      required
                      class="w-full px-0 py-3 bg-transparent border-0 border-b-2 border-stone/60
                             focus:border-bronze focus:outline-none focus:ring-0
                             text-charcoal appearance-none cursor-pointer
                             transition-all duration-300"
                    >
                      <option value="" class="text-charcoal/50">Select one...</option>
                      <option value="venetian-plaster">Venetian Plaster</option>
                      <option value="lime-wash">Lime Wash</option>
                      <option value="microcement">Microcement</option>
                      <option value="historic-restoration">Historic Restoration</option>
                      <option value="ornamental">Ornamental Mouldings</option>
                      <option value="multiple">Multiple Finishes</option>
                      <option value="not-sure">Not Sure Yet</option>
                    </select>
                    <svg class="absolute right-0 top-1/2 -translate-y-1/2 w-5 h-5 text-charcoal/40 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 9l-7 7-7-7" />
                    </svg>
                  </div>
                </div>

                <div class="group">
                  <label for="scope" class="block text-xs tracking-[0.15em] uppercase text-charcoal/60 mb-3 font-medium">
                    Approximate Scope
                  </label>
                  <div class="relative">
                    <select
                      id="scope"
                      name="scope"
                      class="w-full px-0 py-3 bg-transparent border-0 border-b-2 border-stone/60
                             focus:border-bronze focus:outline-none focus:ring-0
                             text-charcoal appearance-none cursor-pointer
                             transition-all duration-300"
                    >
                      <option value="" class="text-charcoal/50">Select one...</option>
                      <option value="single-wall">Single Feature Wall</option>
                      <option value="single-room">Single Room</option>
                      <option value="multiple-rooms">Multiple Rooms</option>
                      <option value="whole-home">Whole Home</option>
                      <option value="commercial">Commercial Space</option>
                    </select>
                    <svg class="absolute right-0 top-1/2 -translate-y-1/2 w-5 h-5 text-charcoal/40 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 9l-7 7-7-7" />
                    </svg>
                  </div>
                </div>
              </div>

              <!-- Timeline -->
              <div class="group">
                <label for="timeline" class="block text-xs tracking-[0.15em] uppercase text-charcoal/60 mb-3 font-medium">
                  Desired Timeline
                </label>
                <div class="relative">
                  <select
                    id="timeline"
                    name="timeline"
                    class="w-full px-0 py-3 bg-transparent border-0 border-b-2 border-stone/60
                           focus:border-bronze focus:outline-none focus:ring-0
                           text-charcoal appearance-none cursor-pointer
                           transition-all duration-300"
                  >
                    <option value="" class="text-charcoal/50">Select one...</option>
                    <option value="asap">As soon as possible</option>
                    <option value="1-3-months">1–3 months</option>
                    <option value="3-6-months">3–6 months</option>
                    <option value="6-plus-months">6+ months</option>
                    <option value="planning">Still in planning phase</option>
                  </select>
                  <svg class="absolute right-0 top-1/2 -translate-y-1/2 w-5 h-5 text-charcoal/40 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 9l-7 7-7-7" />
                  </svg>
                </div>
              </div>

              <!-- Message -->
              <div class="group">
                <label for="message" class="block text-xs tracking-[0.15em] uppercase text-charcoal/60 mb-3 font-medium">
                  Project Details <span class="text-bronze">*</span>
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="4"
                  required
                  placeholder="Tell us about the space, your vision, and any specific requirements..."
                  class="w-full px-0 py-3 bg-transparent border-0 border-b-2 border-stone/60
                         focus:border-bronze focus:outline-none focus:ring-0
                         placeholder:text-charcoal/30 text-charcoal
                         resize-none transition-all duration-300"
                ></textarea>
              </div>

              <!-- How did you hear about us -->
              <div class="group">
                <label for="referral" class="block text-xs tracking-[0.15em] uppercase text-charcoal/60 mb-3 font-medium">
                  How did you find us?
                </label>
                <div class="relative">
                  <select
                    id="referral"
                    name="referral"
                    class="w-full px-0 py-3 bg-transparent border-0 border-b-2 border-stone/60
                           focus:border-bronze focus:outline-none focus:ring-0
                           text-charcoal appearance-none cursor-pointer
                           transition-all duration-300"
                  >
                    <option value="" class="text-charcoal/50">Select one...</option>
                    <option value="architect-referral">Architect / Designer Referral</option>
                    <option value="contractor-referral">Contractor Referral</option>
                    <option value="client-referral">Previous Client Referral</option>
                    <option value="google">Google Search</option>
                    <option value="instagram">Instagram</option>
                    <option value="houzz">Houzz</option>
                    <option value="other">Other</option>
                  </select>
                  <svg class="absolute right-0 top-1/2 -translate-y-1/2 w-5 h-5 text-charcoal/40 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 9l-7 7-7-7" />
                  </svg>
                </div>
              </div>

              <!-- Submit Button -->
              <div class="pt-4">
                <button
                  type="submit"
                  class="group relative w-full md:w-auto px-12 py-4 bg-charcoal text-cream
                         font-medium tracking-[0.1em] uppercase text-sm
                         overflow-hidden transition-all duration-500
                         hover:shadow-[0_8px_30px_rgba(45,42,38,0.3)]"
                >
                  <span class="relative z-10 flex items-center justify-center gap-3">
                    Submit Inquiry
                    <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                    </svg>
                  </span>
                  <div class="absolute inset-0 bg-bronze transform -translate-x-full group-hover:translate-x-0 transition-transform duration-500"></div>
                </button>
              </div>

              <p class="text-charcoal/40 text-sm">
                We respond to all inquiries within one business day.
              </p>
            </form>
          </div>
        </div>

        <!-- Contact Info Column -->
        <div class="lg:col-span-5">
          <div class="sticky top-24">
            <div class="flex items-center gap-4 mb-10">
              <div class="w-12 h-[2px] bg-bronze"></div>
              <h2 class="text-2xl font-heading text-charcoal">Direct Contact</h2>
            </div>

            <div class="space-y-6">
              <!-- Phone -->
              <a href="tel:+18605747004" class="group flex gap-5 p-5 bg-white hover:bg-stone/30 transition-all duration-300">
                <div class="w-14 h-14 bg-stone/50 group-hover:bg-bronze/10 flex items-center justify-center flex-shrink-0 transition-colors duration-300">
                  <svg class="w-6 h-6 text-charcoal/70 group-hover:text-bronze transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-medium text-charcoal mb-1 group-hover:text-bronze transition-colors">Phone</h3>
                  <p class="text-lg text-charcoal/80">860-574-7004</p>
                  <p class="text-sm text-charcoal/50 mt-1">Weekdays 8am–6pm</p>
                </div>
              </a>

              <!-- Email -->
              <a href="mailto:info@oldheadplaster.com" class="group flex gap-5 p-5 bg-white hover:bg-stone/30 transition-all duration-300">
                <div class="w-14 h-14 bg-stone/50 group-hover:bg-bronze/10 flex items-center justify-center flex-shrink-0 transition-colors duration-300">
                  <svg class="w-6 h-6 text-charcoal/70 group-hover:text-bronze transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-medium text-charcoal mb-1 group-hover:text-bronze transition-colors">Email</h3>
                  <p class="text-lg text-charcoal/80">info@oldheadplaster.com</p>
                  <p class="text-sm text-charcoal/50 mt-1">Response within 24 hours</p>
                </div>
              </a>

              <!-- Location -->
              <div class="flex gap-5 p-5 bg-white">
                <div class="w-14 h-14 bg-stone/50 flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-charcoal/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-medium text-charcoal mb-1">Location</h3>
                  <p class="text-lg text-charcoal/80">Fairfield County, CT</p>
                  <p class="text-sm text-charcoal/50 mt-1">Serving CT and tri-state area</p>
                </div>
              </div>
            </div>

            <!-- Trade CTA -->
            <div class="mt-8 p-8 bg-charcoal relative overflow-hidden">
              <div class="absolute inset-0 opacity-10" style="background-image: url('data:image/svg+xml,%3Csvg viewBox=%220 0 200 200%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cfilter id=%22noise%22%3E%3CfeTurbulence type=%22fractalNoise%22 baseFrequency=%220.65%22 numOctaves=%223%22 stitchTiles=%22stitch%22/%3E%3C/filter%3E%3Crect width=%22100%25%22 height=%22100%25%22 filter=%22url(%23noise)%22/%3E%3C/svg%3E');"></div>
              <div class="relative z-10">
                <p class="text-bronze text-xs tracking-[0.2em] uppercase mb-3">For Architects & Designers</p>
                <h3 class="text-xl font-heading text-cream mb-3">Trade Resources</h3>
                <p class="text-cream/60 text-sm mb-6 leading-relaxed">
                  Rapid sampling, complete specifications, and reliable execution for your projects.
                </p>
                <a
                  href="/professionals"
                  class="inline-flex items-center gap-2 text-cream text-sm tracking-wide
                         border-b border-cream/30 pb-1 hover:border-bronze hover:text-bronze transition-colors"
                >
                  View Trade Resources
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </a>
              </div>
            </div>

            <!-- Material Library CTA with QR -->
            <div class="mt-4 p-8 bg-stone">
              <p class="text-bronze text-xs tracking-[0.2em] uppercase mb-3">Prefer In Person?</p>
              <h3 class="text-xl font-heading text-charcoal mb-3">Visit the Material Library</h3>
              <p class="text-charcoal/60 text-sm mb-6 leading-relaxed">
                See 70+ full-scale sample boards and discuss your project face-to-face.
              </p>

              <div class="flex items-start gap-6">
                <div class="flex-1">
                  <a
                    href="/showroom"
                    class="inline-flex items-center gap-2 text-charcoal text-sm tracking-wide
                           border-b border-charcoal/30 pb-1 hover:border-bronze hover:text-bronze transition-colors"
                  >
                    Schedule a Visit
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                    </svg>
                  </a>

                  <a
                    href="/images/qr-code-showroom.svg"
                    download="oldhead-material-library-qr.svg"
                    class="mt-4 inline-flex items-center gap-2 text-charcoal/60 text-xs tracking-wide hover:text-bronze transition-colors"
                  >
                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                    </svg>
                    Download QR to share
                  </a>
                </div>

                <div class="flex-shrink-0">
                  <div class="bg-cream p-2 rounded shadow-md">
                    <img
                      src="/images/qr-code-showroom.svg"
                      alt="QR Code to Material Library"
                      class="w-20 h-20"
                      loading="lazy"
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Area -->
  <section class="py-16 bg-stone">
    <div class="max-w-7xl mx-auto px-6 text-center">
      <p class="text-xs tracking-[0.2em] uppercase text-charcoal/50 mb-4">Primary Service Area</p>
      <p class="text-charcoal/70 text-lg">
        Greenwich <span class="text-bronze mx-2">·</span>
        Westport <span class="text-bronze mx-2">·</span>
        Fairfield <span class="text-bronze mx-2">·</span>
        New Haven <span class="text-bronze mx-2">·</span>
        Hartford
      </p>
      <p class="text-charcoal/50 text-sm mt-2">Projects throughout Connecticut, New York, and the greater tri-state area</p>
    </div>
  </section>
</Layout>

<style>
  /* Custom focus styles for better accessibility */
  input:focus, textarea:focus, select:focus {
    outline: none;
  }

  /* Remove default select arrow in webkit browsers */
  select {
    -webkit-appearance: none;
    -moz-appearance: none;
  }

  /* Smooth placeholder transition */
  input::placeholder, textarea::placeholder {
    transition: opacity 0.3s ease;
  }

  input:focus::placeholder, textarea:focus::placeholder {
    opacity: 0.5;
  }

  /* Radio button custom styling */
  input[type="radio"]:checked + div {
    border-color: #C98821;
    background-color: rgba(201, 136, 33, 0.05);
  }
</style>
