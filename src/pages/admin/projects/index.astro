</AdminLayout>

<script define:vars={{ defaultProjects, statusColors, phaseColors }}>
  // Initialize data
  const STORAGE_KEY = 'oldhead_projects';

  function getProjects() {
    const stored = localStorage.getItem(STORAGE_KEY);
    if (stored) {
      return JSON.parse(stored);
    }
    // Initialize with default projects
    localStorage.setItem(STORAGE_KEY, JSON.stringify(defaultProjects));
    return defaultProjects;
  }

  function saveProjects(projects) {
    localStorage.setItem(STORAGE_KEY, JSON.stringify(projects));
  }

  function generateId(name) {
    return name.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/(^-|-$)/g, '') + '-' + Date.now();
  }

  function formatDate(dateStr) {
    if (!dateStr) return '';
    const date = new Date(dateStr);
    return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
  }

  // DOM Elements
  const projectsGrid = document.getElementById('projects-grid');
  const emptyState = document.getElementById('empty-state');
  const searchInput = document.getElementById('search-input');
  const statusFilter = document.getElementById('status-filter');
  const modal = document.getElementById('project-modal');
  const deleteModal = document.getElementById('delete-modal');
  const form = document.getElementById('project-form');

  let currentProjectId = null;
  let projectToDelete = null;

  // Render projects
  function renderProjects() {
    const projects = getProjects();
    const search = searchInput.value.toLowerCase();
    const statusFilterValue = statusFilter.value;

    let filtered = projects.filter(p => {
      const matchesSearch = p.name.toLowerCase().includes(search) ||
                           p.client.toLowerCase().includes(search) ||
                           (p.address && p.address.toLowerCase().includes(search));
      const matchesStatus = statusFilterValue === 'all' || p.status === statusFilterValue;
      return matchesSearch && matchesStatus;
    });

    // Update stats
    document.getElementById('total-count').textContent = projects.length;
    document.getElementById('active-count').textContent = projects.filter(p => p.status === 'active').length;
    document.getElementById('pending-count').textContent = projects.filter(p => p.status === 'pending').length;
    document.getElementById('sqft-count').textContent = projects.reduce((sum, p) => sum + (p.sqft || 0), 0).toLocaleString();

    if (filtered.length === 0) {
      projectsGrid.innerHTML = '';
      emptyState.classList.remove('hidden');
      return;
    }

    emptyState.classList.add('hidden');

    projectsGrid.innerHTML = filtered.map(project => {
      const statusColor = statusColors[project.status] || statusColors.pending;
      const phaseColor = phaseColors[project.phase] || 'text-cream/60';

      return `
        <div class="block bg-charcoal-light border border-charcoal-border rounded-lg overflow-hidden hover:border-brass/30 transition-all group">
          <div class="p-6">
            <div class="flex items-start justify-between mb-4">
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-2">
                  <a href="/admin/projects/${project.id}" class="text-xl text-cream font-medium group-hover:text-brass transition-colors">${project.name}</a>
                  <span class="text-xs px-2 py-0.5 rounded-full border ${statusColor}">
                    ${project.status}
                  </span>
                </div>
                <p class="text-sm text-cream/50">${project.client} ${project.sqft ? `Â· ${project.sqft.toLocaleString()} sq ft` : ''}</p>
              </div>
              <div class="text-right">
                <div class="text-xs text-cream/40 mb-1">Est. Completion</div>
                <div class="text-sm text-brass">${formatDate(project.estCompletion)}</div>
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
              <!-- Progress -->
              <div class="md:col-span-2">
                <div class="flex items-center justify-between text-xs mb-2">
                  <span class="${phaseColor}">${project.phase}</span>
                  <span class="text-brass">${project.progress}%</span>
                </div>
                <div class="h-2 bg-charcoal rounded-full overflow-hidden">
                  <div class="h-full bg-brass rounded-full transition-all" style="width: ${project.progress}%"></div>
                </div>
                <div class="flex gap-2 mt-3 flex-wrap">
                  ${(project.finishes || []).slice(0, 3).map(finish =>
                    `<span class="text-xs px-2 py-1 bg-charcoal rounded text-cream/60">${finish}</span>`
                  ).join('')}
                  ${(project.finishes || []).length > 3 ? `<span class="text-xs px-2 py-1 bg-charcoal rounded text-cream/40">+${project.finishes.length - 3}</span>` : ''}
                </div>
              </div>

              <!-- Team -->
              <div>
                <div class="text-xs text-cream/40 mb-2">Team (${(project.team || []).length})</div>
                <div class="flex -space-x-2">
                  ${(project.team || []).slice(0, 4).map(member =>
                    `<div class="w-8 h-8 rounded-full bg-brass/20 border-2 border-charcoal-light flex items-center justify-center" title="${member.name} - ${member.role}">
                      <span class="text-brass text-xs font-medium">${member.name.charAt(0)}</span>
                    </div>`
                  ).join('')}
                  ${(project.team || []).length > 4 ?
                    `<div class="w-8 h-8 rounded-full bg-charcoal border-2 border-charcoal-light flex items-center justify-center">
                      <span class="text-cream/50 text-xs">+${project.team.length - 4}</span>
                    </div>` : ''}
                </div>
              </div>

              <!-- Quick Actions -->
              <div class="flex items-center justify-end gap-2">
                <a
                  href="/admin/projects/${project.id}"
                  class="p-2 text-cream/50 hover:text-cream hover:bg-charcoal rounded-lg transition-colors"
                  title="View Project"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                </a>
                <button
                  class="edit-project-btn p-2 text-cream/50 hover:text-cream hover:bg-charcoal rounded-lg transition-colors"
                  data-id="${project.id}"
                  title="Edit Project"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                </button>
              </div>
            </div>
          </div>
        </div>
      `;
    }).join('');

    // Attach edit handlers
    document.querySelectorAll('.edit-project-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        const id = btn.dataset.id;
        openEditModal(id);
      });
    });
  }

  // Modal functions
  function openModal(isEdit = false) {
    modal.classList.remove('hidden');
    modal.classList.add('flex');
    document.getElementById('modal-title').textContent = isEdit ? 'Edit Project' : 'New Project';
    document.getElementById('delete-project-btn').classList.toggle('hidden', !isEdit);
  }

  function closeModal() {
    modal.classList.add('hidden');
    modal.classList.remove('flex');
    form.reset();
    document.querySelectorAll('.finish-checkbox').forEach(cb => cb.checked = false);
    currentProjectId = null;
  }

  function openEditModal(projectId) {
    const projects = getProjects();
    const project = projects.find(p => p.id === projectId);
    if (!project) return;

    currentProjectId = projectId;
    document.getElementById('project-id').value = project.id;
    document.getElementById('project-name').value = project.name;
    document.getElementById('project-client').value = project.client;
    document.getElementById('project-address').value = project.address || '';
    document.getElementById('project-status').value = project.status;
    document.getElementById('project-phase').value = project.phase;
    document.getElementById('project-sqft').value = project.sqft || '';
    document.getElementById('project-progress').value = project.progress || 0;
    document.getElementById('project-start').value = project.startDate || '';
    document.getElementById('project-end').value = project.estCompletion || '';
    document.getElementById('project-notes').value = project.notes || '';

    // Set finishes
    document.querySelectorAll('.finish-checkbox').forEach(cb => {
      cb.checked = (project.finishes || []).includes(cb.value);
    });

    openModal(true);
  }

  function saveProject() {
    const projects = getProjects();
    const finishes = Array.from(document.querySelectorAll('.finish-checkbox:checked')).map(cb => cb.value);

    const projectData = {
      id: currentProjectId || generateId(document.getElementById('project-name').value),
      name: document.getElementById('project-name').value,
      client: document.getElementById('project-client').value,
      address: document.getElementById('project-address').value,
      status: document.getElementById('project-status').value,
      phase: document.getElementById('project-phase').value,
      sqft: parseInt(document.getElementById('project-sqft').value) || 0,
      progress: parseInt(document.getElementById('project-progress').value) || 0,
      startDate: document.getElementById('project-start').value,
      estCompletion: document.getElementById('project-end').value,
      finishes: finishes,
      notes: document.getElementById('project-notes').value,
      team: [],
      milestones: [],
      updates: [],
      files: []
    };

    if (currentProjectId) {
      // Editing existing project - preserve team, milestones, etc.
      const existingIndex = projects.findIndex(p => p.id === currentProjectId);
      if (existingIndex !== -1) {
        projectData.team = projects[existingIndex].team || [];
        projectData.milestones = projects[existingIndex].milestones || [];
        projectData.updates = projects[existingIndex].updates || [];
        projectData.files = projects[existingIndex].files || [];
        projects[existingIndex] = projectData;
      }
    } else {
      // New project - generate default milestones
      projectData.milestones = [
        { id: '1', phase: 'Design Phase', status: 'pending', startDate: '', endDate: '', tasks: ['Material Library visit', 'Architectural review', 'Finish mapping'] },
        { id: '2', phase: 'Sampling Phase', status: 'pending', startDate: '', endDate: '', tasks: ['Custom samples', 'Client approval'] },
        { id: '3', phase: 'Preparation Phase', status: 'pending', startDate: '', endDate: '', tasks: ['Substrate coordination', 'Primer application'] },
        { id: '4', phase: 'Application Phase', status: 'pending', startDate: '', endDate: '', tasks: ['Application work'] },
        { id: '5', phase: 'Completion Phase', status: 'pending', startDate: '', endDate: '', tasks: ['Final walkthrough', 'Care documentation'] }
      ];
      projects.unshift(projectData);
    }

    saveProjects(projects);
    closeModal();
    renderProjects();
  }

  function deleteProject(projectId) {
    const projects = getProjects();
    const filtered = projects.filter(p => p.id !== projectId);
    saveProjects(filtered);
    renderProjects();
  }

  // Event listeners
  document.getElementById('new-project-btn').addEventListener('click', () => openModal(false));
  document.getElementById('empty-new-btn')?.addEventListener('click', () => openModal(false));
  document.getElementById('close-modal').addEventListener('click', closeModal);
  document.getElementById('cancel-modal').addEventListener('click', closeModal);
  document.getElementById('save-project-btn').addEventListener('click', saveProject);

  document.getElementById('delete-project-btn').addEventListener('click', () => {
    projectToDelete = currentProjectId;
    deleteModal.classList.remove('hidden');
    deleteModal.classList.add('flex');
  });

  document.getElementById('cancel-delete').addEventListener('click', () => {
    deleteModal.classList.add('hidden');
    deleteModal.classList.remove('flex');
    projectToDelete = null;
  });

  document.getElementById('confirm-delete').addEventListener('click', () => {
    if (projectToDelete) {
      deleteProject(projectToDelete);
      deleteModal.classList.add('hidden');
      deleteModal.classList.remove('flex');
      closeModal();
      projectToDelete = null;
    }
  });

  searchInput.addEventListener('input', renderProjects);
  statusFilter.addEventListener('change', renderProjects);

  modal.addEventListener('click', (e) => {
    if (e.target === modal) closeModal();
  });

  deleteModal.addEventListener('click', (e) => {
    if (e.target === deleteModal) {
      deleteModal.classList.add('hidden');
      deleteModal.classList.remove('flex');
      projectToDelete = null;
    }
  });

  // Initial render
  renderProjects();
</script>
