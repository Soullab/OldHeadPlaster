        </div>

        <div class="grid grid-cols-3 gap-6">
          <!-- Progress -->
          <div>
            <label class="block text-sm text-cream/60 mb-2">Progress (%)</label>
            <input
              type="number"
              id="project-progress"
              min="0"
              max="100"
              value="0"
              class="w-full bg-charcoal border border-charcoal-border rounded-lg px-4 py-2 text-cream placeholder:text-cream/40 focus:outline-none focus:border-brass/50"
            />
          </div>

          <!-- Start Date -->
          <div>
            <label class="block text-sm text-cream/60 mb-2">Start Date</label>
            <input
              type="date"
              id="project-start"
              class="w-full bg-charcoal border border-charcoal-border rounded-lg px-4 py-2 text-cream focus:outline-none focus:border-brass/50"
            />
          </div>

          <!-- Est. Completion -->
          <div>
            <label class="block text-sm text-cream/60 mb-2">Est. Completion</label>
            <input
              type="date"
              id="project-end"
              class="w-full bg-charcoal border border-charcoal-border rounded-lg px-4 py-2 text-cream focus:outline-none focus:border-brass/50"
            />
          </div>
        </div>

        <!-- Finishes -->
        <div>
          <label class="block text-sm text-cream/60 mb-2">Finishes</label>
          <div id="finishes-container" class="flex flex-wrap gap-2">
            {finishOptions.map(finish => (
              <label class="finish-option flex items-center gap-2 px-3 py-1.5 bg-charcoal rounded-lg cursor-pointer hover:bg-charcoal-border/50 transition-colors">
                <input type="checkbox" value={finish} class="finish-checkbox accent-brass" />
                <span class="text-sm text-cream/70">{finish}</span>
              </label>
            ))}
          </div>
        </div>

        <!-- Notes -->
        <div>
          <label class="block text-sm text-cream/60 mb-2">Project Notes</label>
          <textarea
            id="project-notes"
            rows="3"
            placeholder="Add any notes about this project..."
            class="w-full bg-charcoal border border-charcoal-border rounded-lg px-4 py-3 text-cream placeholder:text-cream/40 focus:outline-none focus:border-brass/50 resize-none"
          ></textarea>
        </div>
      </form>

      <div class="p-6 border-t border-charcoal-border flex items-center justify-between">
        <button id="delete-project-btn" class="text-sm text-red-400 hover:text-red-300 transition-colors hidden">
          Delete Project
        </button>
        <div class="flex items-center gap-3 ml-auto">
          <button id="cancel-modal" class="px-4 py-2 text-cream/70 text-sm hover:text-cream transition-colors">
            Cancel
          </button>
          <button id="save-project-btn" class="px-6 py-2 bg-brass text-charcoal text-sm font-medium rounded-lg hover:bg-brass-light transition-colors">
            Save Project
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Delete Confirmation Modal -->
  <div id="delete-modal" class="fixed inset-0 bg-black/70 z-50 hidden items-center justify-center">
    <div class="bg-charcoal-light border border-charcoal-border rounded-xl w-full max-w-md mx-4 p-6">
      <h3 class="text-lg text-cream font-medium mb-2">Delete Project?</h3>
      <p class="text-cream/60 mb-6">This action cannot be undone. All project data, team members, and files will be permanently deleted.</p>
      <div class="flex justify-end gap-3">
        <button id="cancel-delete" class="px-4 py-2 text-cream/70 text-sm hover:text-cream transition-colors">
          Cancel
        </button>
        <button id="confirm-delete" class="px-4 py-2 bg-red-500 text-white text-sm font-medium rounded-lg hover:bg-red-600 transition-colors">
