---
import AdminLayout from '../../layouts/AdminLayout.astro';

const typeIcons = {
  spec: { icon: 'üìÑ', color: 'bg-blue-500/20 text-blue-400' },
  photo: { icon: 'üì∑', color: 'bg-purple-500/20 text-purple-400' },
  report: { icon: 'üìä', color: 'bg-emerald-500/20 text-emerald-400' },
  contract: { icon: 'üìù', color: 'bg-amber-500/20 text-amber-400' }
};
---

<AdminLayout title="Documents" currentPage="documents">
  <!-- Header -->
  <div class="flex items-center justify-between mb-8">
    <div class="flex items-center gap-4">
      <div class="relative">
        <input
          id="search-input"
          type="search"
          placeholder="Search documents..."
          class="w-64 bg-charcoal-light border border-charcoal-border rounded-lg px-4 py-2 pl-10 text-sm text-cream placeholder:text-cream/40 focus:outline-none focus:border-brass/50"
        />
        <svg class="w-4 h-4 text-cream/40 absolute left-3 top-1/2 -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
      </div>

      <select id="project-filter" class="bg-charcoal-light border border-charcoal-border rounded-lg px-4 py-2 text-sm text-cream/70 focus:outline-none focus:border-brass/50">
        <option value="all">All Projects</option>
      </select>

      <select id="type-filter" class="bg-charcoal-light border border-charcoal-border rounded-lg px-4 py-2 text-sm text-cream/70 focus:outline-none focus:border-brass/50">
        <option value="all">All Types</option>
        <option value="spec">Specifications</option>
        <option value="photo">Photos</option>
        <option value="report">Reports</option>
        <option value="contract">Contracts</option>
      </select>
    </div>

    <button id="upload-btn" class="flex items-center gap-2 px-4 py-2 bg-brass text-charcoal text-sm font-medium rounded-lg hover:bg-brass-light transition-colors">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
      </svg>
      Upload
    </button>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-4 gap-4 mb-8">
    <div class="bg-charcoal-light border border-charcoal-border rounded-lg p-4 text-center">
      <div id="total-count" class="text-2xl font-semibold text-cream">0</div>
      <div class="text-sm text-cream/50">Total Files</div>
    </div>
    <div class="bg-charcoal-light border border-charcoal-border rounded-lg p-4 text-center">
      <div id="spec-count" class="text-2xl font-semibold text-blue-400">0</div>
      <div class="text-sm text-cream/50">Specifications</div>
    </div>
    <div class="bg-charcoal-light border border-charcoal-border rounded-lg p-4 text-center">
      <div id="photo-count" class="text-2xl font-semibold text-purple-400">0</div>
      <div class="text-sm text-cream/50">Photos</div>
    </div>
    <div class="bg-charcoal-light border border-charcoal-border rounded-lg p-4 text-center">
      <div id="report-count" class="text-2xl font-semibold text-emerald-400">0</div>
      <div class="text-sm text-cream/50">Reports</div>
    </div>
  </div>

  <!-- Drop Zone -->
  <div id="drop-zone" class="mb-8 border-2 border-dashed border-charcoal-border rounded-xl p-8 text-center hover:border-brass/30 transition-colors cursor-pointer bg-charcoal-light/50">
    <svg class="w-12 h-12 text-cream/20 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
    </svg>
    <p class="text-cream/50 mb-1">Drag and drop files here, or click to browse</p>
    <p class="text-sm text-cream/30">Support for PDF, images, and ZIP files up to 100MB</p>
    <input type="file" id="file-input" class="hidden" multiple accept=".pdf,.jpg,.jpeg,.png,.gif,.zip,.doc,.docx" />
  </div>

  <!-- Documents Table -->
  <div class="bg-charcoal-light border border-charcoal-border rounded-lg overflow-hidden">
    <table class="w-full">
      <thead>
        <tr class="border-b border-charcoal-border">
          <th class="text-left text-xs text-cream/40 font-medium uppercase tracking-wider px-6 py-4">Document</th>
          <th class="text-left text-xs text-cream/40 font-medium uppercase tracking-wider px-6 py-4">Project</th>
          <th class="text-left text-xs text-cream/40 font-medium uppercase tracking-wider px-6 py-4">Shared With</th>
          <th class="text-left text-xs text-cream/40 font-medium uppercase tracking-wider px-6 py-4">Uploaded</th>
          <th class="text-right text-xs text-cream/40 font-medium uppercase tracking-wider px-6 py-4">Actions</th>
        </tr>
      </thead>
      <tbody id="documents-body" class="divide-y divide-charcoal-border">
        <!-- Documents rendered by JavaScript -->
      </tbody>
    </table>
  </div>

  <!-- Empty State -->
  <div id="empty-state" class="hidden text-center py-16">
    <svg class="w-16 h-16 text-cream/20 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
    </svg>
    <h3 class="text-lg text-cream mb-2">No documents yet</h3>
    <p class="text-cream/50 mb-4">Upload your first document to get started</p>
  </div>

  <!-- Upload Modal -->
  <div id="upload-modal" class="fixed inset-0 bg-black/70 z-50 hidden items-center justify-center">
    <div class="bg-charcoal-light border border-charcoal-border rounded-xl w-full max-w-lg mx-4">
      <div class="p-6 border-b border-charcoal-border flex items-center justify-between">
        <h2 class="text-xl text-cream font-medium">Upload Document</h2>
        <button id="close-upload-modal" class="text-cream/50 hover:text-cream transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <form id="upload-form" class="p-6 space-y-4">
        <div>
          <label class="block text-sm text-cream/60 mb-2">File Name *</label>
          <input type="text" id="doc-name" required class="w-full bg-charcoal border border-charcoal-border rounded-lg px-4 py-2 text-cream placeholder:text-cream/40 focus:outline-none focus:border-brass/50" placeholder="e.g. Finish Specifications.pdf" />
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm text-cream/60 mb-2">Project *</label>
            <select id="doc-project" required class="w-full bg-charcoal border border-charcoal-border rounded-lg px-4 py-2 text-cream focus:outline-none focus:border-brass/50">
              <!-- Projects populated by JavaScript -->
            </select>
          </div>
          <div>
            <label class="block text-sm text-cream/60 mb-2">Type *</label>
            <select id="doc-type" required class="w-full bg-charcoal border border-charcoal-border rounded-lg px-4 py-2 text-cream focus:outline-none focus:border-brass/50">
              <option value="spec">Specification</option>
              <option value="photo">Photo</option>
              <option value="report">Report</option>
              <option value="contract">Contract</option>
            </select>
          </div>
        </div>

        <div>
          <label class="block text-sm text-cream/60 mb-2">File Size</label>
          <input type="text" id="doc-size" class="w-full bg-charcoal border border-charcoal-border rounded-lg px-4 py-2 text-cream placeholder:text-cream/40 focus:outline-none focus:border-brass/50" placeholder="e.g. 2.4 MB" />
        </div>

        <div>
          <label class="block text-sm text-cream/60 mb-2">Share With</label>
          <div id="share-options" class="space-y-2 max-h-40 overflow-y-auto">
            <label class="flex items-center gap-3 p-2 bg-charcoal rounded-lg cursor-pointer hover:bg-charcoal-border/50 transition-colors">
              <input type="checkbox" value="All Team" class="share-checkbox accent-brass" checked />
              <span class="text-cream text-sm">All Team</span>
            </label>
            <!-- Team members populated by JavaScript -->
          </div>
        </div>
      </form>

      <div class="p-6 border-t border-charcoal-border flex justify-end gap-3">
        <button id="cancel-upload" class="px-4 py-2 text-cream/70 text-sm hover:text-cream transition-colors">Cancel</button>
        <button id="save-document" class="px-6 py-2 bg-brass text-charcoal text-sm font-medium rounded-lg hover:bg-brass-light transition-colors">Save Document</button>
      </div>
    </div>
  </div>

  <!-- Share Modal -->
  <div id="share-modal" class="fixed inset-0 bg-black/70 z-50 hidden items-center justify-center">
    <div class="bg-charcoal-light border border-charcoal-border rounded-xl w-full max-w-md mx-4">
      <div class="p-6 border-b border-charcoal-border flex items-center justify-between">
        <h2 class="text-xl text-cream font-medium">Share Document</h2>
        <button id="close-share-modal" class="text-cream/50 hover:text-cream transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="p-6">
        <p id="share-doc-name" class="text-cream mb-4"></p>
        <div id="share-recipients" class="space-y-2 max-h-60 overflow-y-auto">
          <!-- Recipients populated by JavaScript -->
        </div>
      </div>
      <div class="p-6 border-t border-charcoal-border flex justify-end gap-3">
        <button id="cancel-share" class="px-4 py-2 text-cream/70 text-sm hover:text-cream transition-colors">Cancel</button>
        <button id="save-share" class="px-6 py-2 bg-brass text-charcoal text-sm font-medium rounded-lg hover:bg-brass-light transition-colors">Update Sharing</button>
      </div>
    </div>
  </div>

  <!-- Delete Modal -->
  <div id="delete-modal" class="fixed inset-0 bg-black/70 z-50 hidden items-center justify-center">
    <div class="bg-charcoal-light border border-charcoal-border rounded-xl w-full max-w-md mx-4 p-6">
      <h3 class="text-lg text-cream font-medium mb-2">Delete Document?</h3>
      <p id="delete-doc-name" class="text-cream/60 mb-6"></p>
      <div class="flex justify-end gap-3">
        <button id="cancel-delete" class="px-4 py-2 text-cream/70 text-sm hover:text-cream transition-colors">Cancel</button>
        <button id="confirm-delete" class="px-4 py-2 bg-red-500 text-white text-sm font-medium rounded-lg hover:bg-red-600 transition-colors">Delete</button>
      </div>
    </div>
  </div>
</AdminLayout>

<script define:vars={{ typeIcons }}>
  const PROJECTS_KEY = 'oldhead_projects';
  const DOCS_KEY = 'oldhead_documents';

  // Default documents
  const defaultDocuments = [
    { id: '1', name: 'Finish Specifications.pdf', project: 'Greenwich Estate', type: 'spec', size: '2.4 MB', uploadedBy: 'Daragh', date: '2024-12-15', shared: ['All Team'] },
    { id: '2', name: 'Sample Board Photos.zip', project: 'Greenwich Estate', type: 'photo', size: '45 MB', uploadedBy: 'Daragh', date: '2025-01-05', shared: ['Lisa Harrison', 'Sarah Chen'] },
    { id: '3', name: 'Lighting Recommendations.pdf', project: 'Greenwich Estate', type: 'spec', size: '1.2 MB', uploadedBy: 'Sarah Chen', date: '2024-12-20', shared: ['All Team'] },
    { id: '4', name: 'Master Suite Progress - Jan 17.jpg', project: 'Greenwich Estate', type: 'photo', size: '3.8 MB', uploadedBy: 'Daragh', date: '2025-01-17', shared: ['All Team'] },
    { id: '5', name: 'Westport Samples.zip', project: 'Westport Modern', type: 'photo', size: '28 MB', uploadedBy: 'Daragh', date: '2025-01-10', shared: ['David Chen', 'James Wong'] },
    { id: '6', name: 'Microcement Specs.pdf', project: 'Westport Modern', type: 'spec', size: '1.8 MB', uploadedBy: 'Daragh', date: '2025-01-08', shared: ['James Wong'] },
    { id: '7', name: 'Historic Preservation Guidelines.pdf', project: 'Darien Historic', type: 'spec', size: '5.2 MB', uploadedBy: 'Robert Mills', date: '2025-01-12', shared: ['All Team'] },
    { id: '8', name: 'Original Plaster Analysis.pdf', project: 'Darien Historic', type: 'report', size: '3.1 MB', uploadedBy: 'Daragh', date: '2025-01-15', shared: ['Patricia Wright', 'Robert Mills'] }
  ];

  function getDocuments() {
    const stored = localStorage.getItem(DOCS_KEY);
    if (stored) return JSON.parse(stored);
    localStorage.setItem(DOCS_KEY, JSON.stringify(defaultDocuments));
    return defaultDocuments;
  }

  function saveDocuments(docs) {
    localStorage.setItem(DOCS_KEY, JSON.stringify(docs));
  }

  function getProjects() {
    const stored = localStorage.getItem(PROJECTS_KEY);
    return stored ? JSON.parse(stored) : [];
  }

  function getAllTeamMembers() {
    const projects = getProjects();
    const members = new Set();
    projects.forEach(p => {
      (p.team || []).forEach(m => members.add(m.name));
    });
    return Array.from(members);
  }

  function formatDate(dateStr) {
    if (!dateStr) return '';
    const date = new Date(dateStr);
    return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
  }

  // DOM Elements
  const documentsBody = document.getElementById('documents-body');
  const emptyState = document.getElementById('empty-state');
  const searchInput = document.getElementById('search-input');
  const projectFilter = document.getElementById('project-filter');
  const typeFilter = document.getElementById('type-filter');
  const dropZone = document.getElementById('drop-zone');
  const fileInput = document.getElementById('file-input');
  const uploadModal = document.getElementById('upload-modal');
  const shareModal = document.getElementById('share-modal');
  const deleteModal = document.getElementById('delete-modal');

  let currentDocId = null;
  let docToDelete = null;

  // Populate project filter
  function populateProjectFilter() {
    const projects = getProjects();
    projectFilter.innerHTML = '<option value="all">All Projects</option>' +
      projects.map(p => `<option value="${p.name}">${p.name}</option>`).join('');

    // Also populate upload modal project select
    const docProject = document.getElementById('doc-project');
    docProject.innerHTML = projects.map(p => `<option value="${p.name}">${p.name}</option>`).join('');
  }

  // Populate share options
  function populateShareOptions(currentShared = []) {
    const members = getAllTeamMembers();
    const shareOptions = document.getElementById('share-options');

    shareOptions.innerHTML = `
      <label class="flex items-center gap-3 p-2 bg-charcoal rounded-lg cursor-pointer hover:bg-charcoal-border/50 transition-colors">
        <input type="checkbox" value="All Team" class="share-checkbox accent-brass" ${currentShared.includes('All Team') ? 'checked' : ''} />
        <span class="text-cream text-sm">All Team</span>
      </label>
    ` + members.map(name => `
      <label class="flex items-center gap-3 p-2 bg-charcoal rounded-lg cursor-pointer hover:bg-charcoal-border/50 transition-colors">
        <input type="checkbox" value="${name}" class="share-checkbox accent-brass" ${currentShared.includes(name) ? 'checked' : ''} />
        <span class="text-cream text-sm">${name}</span>
      </label>
    `).join('');
  }

  // Render documents
  function renderDocuments() {
    const documents = getDocuments();
    const search = searchInput.value.toLowerCase();
    const projectValue = projectFilter.value;
    const typeValue = typeFilter.value;

    let filtered = documents.filter(doc => {
      const matchesSearch = doc.name.toLowerCase().includes(search) ||
                           doc.project.toLowerCase().includes(search);
      const matchesProject = projectValue === 'all' || doc.project === projectValue;
      const matchesType = typeValue === 'all' || doc.type === typeValue;
      return matchesSearch && matchesProject && matchesType;
    });

    // Update stats
    document.getElementById('total-count').textContent = documents.length;
    document.getElementById('spec-count').textContent = documents.filter(d => d.type === 'spec').length;
    document.getElementById('photo-count').textContent = documents.filter(d => d.type === 'photo').length;
    document.getElementById('report-count').textContent = documents.filter(d => d.type === 'report' || d.type === 'contract').length;

    if (filtered.length === 0) {
      documentsBody.innerHTML = '';
      emptyState.classList.remove('hidden');
      documentsBody.parentElement.classList.add('hidden');
      return;
    }

    emptyState.classList.add('hidden');
    documentsBody.parentElement.classList.remove('hidden');

    documentsBody.innerHTML = filtered.map(doc => {
      const typeInfo = typeIcons[doc.type] || typeIcons.spec;
      return `
        <tr class="hover:bg-charcoal-border/30 transition-colors">
          <td class="px-6 py-4">
            <div class="flex items-center gap-4">
              <div class="w-10 h-10 rounded-lg flex items-center justify-center ${typeInfo.color}">
                <span class="text-lg">${typeInfo.icon}</span>
              </div>
              <div>
                <div class="text-cream font-medium">${doc.name}</div>
                <div class="text-sm text-cream/50">${doc.size || ''}</div>
              </div>
            </div>
          </td>
          <td class="px-6 py-4">
            <span class="text-sm text-brass">${doc.project}</span>
          </td>
          <td class="px-6 py-4">
            <div class="flex flex-wrap gap-1">
              ${(doc.shared || []).map(person => `
                <span class="text-xs px-2 py-0.5 bg-charcoal rounded text-cream/50">${person}</span>
              `).join('')}
            </div>
          </td>
          <td class="px-6 py-4">
            <div class="text-sm text-cream/70">${formatDate(doc.date)}</div>
            <div class="text-xs text-cream/40">by ${doc.uploadedBy || 'Daragh'}</div>
          </td>
          <td class="px-6 py-4">
            <div class="flex items-center justify-end gap-1">
              <button class="download-btn p-2 text-cream/50 hover:text-cream hover:bg-charcoal rounded-lg transition-colors" data-id="${doc.id}" title="Download">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                </svg>
              </button>
              <button class="share-btn p-2 text-cream/50 hover:text-cream hover:bg-charcoal rounded-lg transition-colors" data-id="${doc.id}" title="Share">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
                </svg>
              </button>
              <button class="delete-btn p-2 text-cream/50 hover:text-red-400 hover:bg-charcoal rounded-lg transition-colors" data-id="${doc.id}" title="Delete">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              </button>
            </div>
          </td>
        </tr>
      `;
    }).join('');

    // Attach handlers
    document.querySelectorAll('.download-btn').forEach(btn => {
      btn.addEventListener('click', () => downloadDocument(btn.dataset.id));
    });
    document.querySelectorAll('.share-btn').forEach(btn => {
      btn.addEventListener('click', () => openShareModal(btn.dataset.id));
    });
    document.querySelectorAll('.delete-btn').forEach(btn => {
      btn.addEventListener('click', () => openDeleteModal(btn.dataset.id));
    });
  }

  function downloadDocument(docId) {
    const docs = getDocuments();
    const doc = docs.find(d => d.id === docId);
    if (doc) {
      alert(`Download: ${doc.name}\n\nNote: In production, this would trigger a file download. For now, document metadata is stored in localStorage.`);
    }
  }

  // Upload Modal
  function openUploadModal(fileName = '') {
    document.getElementById('upload-form').reset();
    document.getElementById('doc-name').value = fileName;
    populateShareOptions(['All Team']);
    uploadModal.classList.remove('hidden');
    uploadModal.classList.add('flex');
  }

  function closeUploadModal() {
    uploadModal.classList.add('hidden');
    uploadModal.classList.remove('flex');
  }

  function saveDocument() {
    const shared = Array.from(document.querySelectorAll('.share-checkbox:checked')).map(cb => cb.value);

    const newDoc = {
      id: 'doc-' + Date.now(),
      name: document.getElementById('doc-name').value,
      project: document.getElementById('doc-project').value,
      type: document.getElementById('doc-type').value,
      size: document.getElementById('doc-size').value || 'N/A',
      uploadedBy: 'Daragh',
      date: new Date().toISOString().split('T')[0],
      shared: shared
    };

    const docs = getDocuments();
    docs.unshift(newDoc);
    saveDocuments(docs);
    closeUploadModal();
    renderDocuments();
  }

  // Share Modal
  function openShareModal(docId) {
    const docs = getDocuments();
    const doc = docs.find(d => d.id === docId);
    if (!doc) return;

    currentDocId = docId;
    document.getElementById('share-doc-name').textContent = `Sharing: ${doc.name}`;

    const members = getAllTeamMembers();
    const shareRecipients = document.getElementById('share-recipients');
    shareRecipients.innerHTML = `
      <label class="flex items-center gap-3 p-2 bg-charcoal rounded-lg cursor-pointer hover:bg-charcoal-border/50 transition-colors">
        <input type="checkbox" value="All Team" class="share-recipient-checkbox accent-brass" ${(doc.shared || []).includes('All Team') ? 'checked' : ''} />
        <span class="text-cream text-sm">All Team</span>
      </label>
    ` + members.map(name => `
      <label class="flex items-center gap-3 p-2 bg-charcoal rounded-lg cursor-pointer hover:bg-charcoal-border/50 transition-colors">
        <input type="checkbox" value="${name}" class="share-recipient-checkbox accent-brass" ${(doc.shared || []).includes(name) ? 'checked' : ''} />
        <span class="text-cream text-sm">${name}</span>
      </label>
    `).join('');

    shareModal.classList.remove('hidden');
    shareModal.classList.add('flex');
  }

  function closeShareModal() {
    shareModal.classList.add('hidden');
    shareModal.classList.remove('flex');
    currentDocId = null;
  }

  function saveShare() {
    if (!currentDocId) return;
    const shared = Array.from(document.querySelectorAll('.share-recipient-checkbox:checked')).map(cb => cb.value);
    const docs = getDocuments();
    const index = docs.findIndex(d => d.id === currentDocId);
    if (index !== -1) {
      docs[index].shared = shared;
      saveDocuments(docs);
    }
    closeShareModal();
    renderDocuments();
  }

  // Delete Modal
  function openDeleteModal(docId) {
    const docs = getDocuments();
    const doc = docs.find(d => d.id === docId);
    if (!doc) return;

    docToDelete = docId;
    document.getElementById('delete-doc-name').textContent = `This will permanently delete "${doc.name}"`;
    deleteModal.classList.remove('hidden');
    deleteModal.classList.add('flex');
  }

  function closeDeleteModal() {
    deleteModal.classList.add('hidden');
    deleteModal.classList.remove('flex');
    docToDelete = null;
  }

  function confirmDelete() {
    if (!docToDelete) return;
    const docs = getDocuments();
    const filtered = docs.filter(d => d.id !== docToDelete);
    saveDocuments(filtered);
    closeDeleteModal();
    renderDocuments();
  }

  // Drag and drop
  dropZone.addEventListener('click', () => fileInput.click());
  dropZone.addEventListener('dragover', (e) => {
    e.preventDefault();
    dropZone.classList.add('border-brass/50', 'bg-brass/5');
  });
  dropZone.addEventListener('dragleave', () => {
    dropZone.classList.remove('border-brass/50', 'bg-brass/5');
  });
  dropZone.addEventListener('drop', (e) => {
    e.preventDefault();
    dropZone.classList.remove('border-brass/50', 'bg-brass/5');
    const files = e.dataTransfer.files;
    if (files.length > 0) {
      openUploadModal(files[0].name);
    }
  });
  fileInput.addEventListener('change', (e) => {
    if (e.target.files.length > 0) {
      openUploadModal(e.target.files[0].name);
    }
  });

  // Event listeners
  document.getElementById('upload-btn').addEventListener('click', () => openUploadModal());
  document.getElementById('close-upload-modal').addEventListener('click', closeUploadModal);
  document.getElementById('cancel-upload').addEventListener('click', closeUploadModal);
  document.getElementById('save-document').addEventListener('click', saveDocument);
  uploadModal.addEventListener('click', (e) => { if (e.target === uploadModal) closeUploadModal(); });

  document.getElementById('close-share-modal').addEventListener('click', closeShareModal);
  document.getElementById('cancel-share').addEventListener('click', closeShareModal);
  document.getElementById('save-share').addEventListener('click', saveShare);
  shareModal.addEventListener('click', (e) => { if (e.target === shareModal) closeShareModal(); });

  document.getElementById('cancel-delete').addEventListener('click', closeDeleteModal);
  document.getElementById('confirm-delete').addEventListener('click', confirmDelete);
  deleteModal.addEventListener('click', (e) => { if (e.target === deleteModal) closeDeleteModal(); });

  searchInput.addEventListener('input', renderDocuments);
  projectFilter.addEventListener('change', renderDocuments);
  typeFilter.addEventListener('change', renderDocuments);

  // Initialize
  populateProjectFilter();
  renderDocuments();
</script>
