---
import AdminLayout from '../../layouts/AdminLayout.astro';
---

<AdminLayout title="Settings" currentPage="settings">
  <div class="max-w-4xl mx-auto space-y-8">
    <!-- Page Header -->
    <div>
      <h1 class="text-2xl font-semibold text-cream mb-2">Settings</h1>
      <p class="text-cream/50">Manage your admin panel preferences and data sync options</p>
    </div>

    <!-- Data Sync Section -->
    <div class="bg-charcoal-light border border-charcoal-border rounded-lg p-6">
      <div class="flex items-center gap-3 mb-6">
        <div class="p-2 bg-brass/20 rounded-lg">
          <svg class="w-5 h-5 text-brass" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
        </div>
        <div>
          <h2 class="text-lg font-medium text-cream">Data Sync</h2>
          <p class="text-sm text-cream/50">Connect your data to external services</p>
        </div>
      </div>

      <div class="space-y-4">
        <!-- Obsidian Sync -->
        <div class="flex items-center justify-between p-4 bg-charcoal rounded-lg border border-charcoal-border">
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 bg-purple-500/20 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-purple-400" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
              </svg>
            </div>
            <div>
              <h3 class="font-medium text-cream">Obsidian Vault</h3>
              <p class="text-sm text-cream/50">Sync notes and documents to your Obsidian vault</p>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <span id="obsidian-status" class="text-sm text-cream/40">Not connected</span>
            <button id="obsidian-connect-btn" class="px-4 py-2 bg-purple-500/20 text-purple-400 text-sm font-medium rounded-lg hover:bg-purple-500/30 transition-colors border border-purple-500/30">
              Connect
            </button>
          </div>
        </div>

        <!-- Google Drive Sync -->
        <div class="flex items-center justify-between p-4 bg-charcoal rounded-lg border border-charcoal-border">
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 bg-blue-500/20 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-blue-400" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12.01 1.485c-2.082 0-3.754.02-3.743.047.01.02 1.708 3.001 3.774 6.62l3.76 6.574h3.76c2.081 0 3.753-.02 3.742-.047-.01-.02-1.708-3.001-3.774-6.62l-3.76-6.574h-3.76zm-4.76 1.73a789.828 789.828 0 00-3.63 6.319L0 16.074l1.89 3.26 1.89 3.26h3.76l3.76-.007-1.89-3.26-1.89-3.26-3.76 6.513-1.87-3.24c-1.03-1.78-1.873-3.27-1.873-3.3 0-.03.844-1.52 1.873-3.3l1.87-3.24-1.87-3.24z"/>
              </svg>
            </div>
            <div>
              <h3 class="font-medium text-cream">Google Drive</h3>
              <p class="text-sm text-cream/50">Backup projects and documents to Google Drive</p>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <span id="gdrive-status" class="text-sm text-cream/40">Not connected</span>
            <button id="gdrive-connect-btn" class="px-4 py-2 bg-blue-500/20 text-blue-400 text-sm font-medium rounded-lg hover:bg-blue-500/30 transition-colors border border-blue-500/30">
              Connect
            </button>
          </div>
        </div>
      </div>

      <div class="mt-6 p-4 bg-brass/10 rounded-lg border border-brass/20">
        <div class="flex gap-3">
          <svg class="w-5 h-5 text-brass flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <div>
            <p class="text-sm text-cream/70">Data sync allows you to backup your projects, documents, and notes to external services. Your local data will always be preserved.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Business Settings -->
    <div class="bg-charcoal-light border border-charcoal-border rounded-lg p-6">
      <div class="flex items-center gap-3 mb-6">
        <div class="p-2 bg-emerald-500/20 rounded-lg">
          <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
        </div>
        <div>
          <h2 class="text-lg font-medium text-cream">Business Info</h2>
          <p class="text-sm text-cream/50">Update your business details</p>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm text-cream/70 mb-2">Business Name</label>
          <input type="text" id="business-name" value="Old Head Plastering" class="w-full px-4 py-2.5 bg-charcoal border border-charcoal-border rounded-lg text-cream placeholder:text-cream/30 focus:outline-none focus:border-brass/50" />
        </div>
        <div>
          <label class="block text-sm text-cream/70 mb-2">Owner Name</label>
          <input type="text" id="owner-name" value="Daragh" class="w-full px-4 py-2.5 bg-charcoal border border-charcoal-border rounded-lg text-cream placeholder:text-cream/30 focus:outline-none focus:border-brass/50" />
        </div>
        <div>
          <label class="block text-sm text-cream/70 mb-2">Email</label>
          <input type="email" id="business-email" placeholder="daragh@oldheadplastering.com" class="w-full px-4 py-2.5 bg-charcoal border border-charcoal-border rounded-lg text-cream placeholder:text-cream/30 focus:outline-none focus:border-brass/50" />
        </div>
        <div>
          <label class="block text-sm text-cream/70 mb-2">Phone</label>
          <input type="tel" id="business-phone" placeholder="+353 XX XXX XXXX" class="w-full px-4 py-2.5 bg-charcoal border border-charcoal-border rounded-lg text-cream placeholder:text-cream/30 focus:outline-none focus:border-brass/50" />
        </div>
      </div>

      <button id="save-business-btn" class="mt-6 px-6 py-2.5 bg-brass text-charcoal font-medium rounded-lg hover:bg-brass-light transition-colors">
        Save Changes
      </button>
    </div>

    <!-- Data Management -->
    <div class="bg-charcoal-light border border-charcoal-border rounded-lg p-6">
      <div class="flex items-center gap-3 mb-6">
        <div class="p-2 bg-amber-500/20 rounded-lg">
          <svg class="w-5 h-5 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />
          </svg>
        </div>
        <div>
          <h2 class="text-lg font-medium text-cream">Data Management</h2>
          <p class="text-sm text-cream/50">Export, import, or clear your data</p>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <button id="export-data-btn" class="flex items-center justify-center gap-2 p-4 bg-charcoal rounded-lg border border-charcoal-border hover:border-brass/30 transition-colors group">
          <svg class="w-5 h-5 text-cream/50 group-hover:text-brass transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
          </svg>
          <span class="text-cream/70 group-hover:text-cream transition-colors">Export All Data</span>
        </button>

        <button id="import-data-btn" class="flex items-center justify-center gap-2 p-4 bg-charcoal rounded-lg border border-charcoal-border hover:border-brass/30 transition-colors group">
          <svg class="w-5 h-5 text-cream/50 group-hover:text-brass transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
          </svg>
          <span class="text-cream/70 group-hover:text-cream transition-colors">Import Data</span>
        </button>

        <button id="clear-data-btn" class="flex items-center justify-center gap-2 p-4 bg-charcoal rounded-lg border border-red-500/30 hover:border-red-500/50 transition-colors group">
          <svg class="w-5 h-5 text-red-400/70 group-hover:text-red-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
          <span class="text-red-400/70 group-hover:text-red-400 transition-colors">Clear All Data</span>
        </button>
      </div>

      <input type="file" id="import-file-input" accept=".json" class="hidden" />
    </div>

    <!-- Sync Status -->
    <div class="bg-charcoal-light border border-charcoal-border rounded-lg p-6">
      <div class="flex items-center gap-3 mb-6">
        <div class="p-2 bg-cream/10 rounded-lg">
          <svg class="w-5 h-5 text-cream/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div>
          <h2 class="text-lg font-medium text-cream">Storage Status</h2>
          <p class="text-sm text-cream/50">Current data stored locally</p>
        </div>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="p-4 bg-charcoal rounded-lg border border-charcoal-border text-center">
          <div id="projects-count" class="text-2xl font-semibold text-cream">0</div>
          <div class="text-sm text-cream/50">Projects</div>
        </div>
        <div class="p-4 bg-charcoal rounded-lg border border-charcoal-border text-center">
          <div id="messages-count" class="text-2xl font-semibold text-cream">0</div>
          <div class="text-sm text-cream/50">Messages</div>
        </div>
        <div class="p-4 bg-charcoal rounded-lg border border-charcoal-border text-center">
          <div id="documents-count" class="text-2xl font-semibold text-cream">0</div>
          <div class="text-sm text-cream/50">Documents</div>
        </div>
        <div class="p-4 bg-charcoal rounded-lg border border-charcoal-border text-center">
          <div id="events-count" class="text-2xl font-semibold text-cream">0</div>
          <div class="text-sm text-cream/50">Events</div>
        </div>
      </div>

      <div class="mt-4 text-sm text-cream/40 text-center">
        Last synced: <span id="last-sync">Never</span>
      </div>
    </div>
  </div>

  <!-- Obsidian Setup Modal -->
  <div id="obsidian-modal" class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 hidden items-center justify-center p-4">
    <div class="bg-charcoal-light border border-charcoal-border rounded-xl w-full max-w-lg">
      <div class="p-6 border-b border-charcoal-border">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-purple-500/20 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-purple-400" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-medium text-cream">Connect to Obsidian</h3>
            <p class="text-sm text-cream/50">Set up sync with your Obsidian vault</p>
          </div>
        </div>
      </div>

      <div class="p-6 space-y-4">
        <div>
          <label class="block text-sm text-cream/70 mb-2">Vault Path</label>
          <input type="text" id="obsidian-path" placeholder="/Users/daragh/Documents/Obsidian/OldHead" class="w-full px-4 py-2.5 bg-charcoal border border-charcoal-border rounded-lg text-cream placeholder:text-cream/30 focus:outline-none focus:border-purple-500/50" />
          <p class="text-xs text-cream/40 mt-1">Enter the full path to your Obsidian vault folder</p>
        </div>

        <div>
          <label class="block text-sm text-cream/70 mb-2">Sync Folder Name</label>
          <input type="text" id="obsidian-folder" value="OldHeadPlaster" class="w-full px-4 py-2.5 bg-charcoal border border-charcoal-border rounded-lg text-cream placeholder:text-cream/30 focus:outline-none focus:border-purple-500/50" />
          <p class="text-xs text-cream/40 mt-1">Folder inside your vault where data will be synced</p>
        </div>

        <div class="flex items-center gap-3">
          <input type="checkbox" id="obsidian-auto-sync" class="w-4 h-4 rounded border-charcoal-border bg-charcoal text-purple-500 focus:ring-purple-500/30" />
          <label for="obsidian-auto-sync" class="text-sm text-cream/70">Auto-sync when data changes</label>
        </div>
      </div>

      <div class="p-6 border-t border-charcoal-border flex justify-end gap-3">
        <button id="obsidian-cancel-btn" class="px-4 py-2 text-cream/70 hover:text-cream transition-colors">Cancel</button>
        <button id="obsidian-save-btn" class="px-6 py-2 bg-purple-500 text-white font-medium rounded-lg hover:bg-purple-600 transition-colors">Connect</button>
      </div>
    </div>
  </div>

  <!-- Google Drive Setup Modal -->
  <div id="gdrive-modal" class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 hidden items-center justify-center p-4">
    <div class="bg-charcoal-light border border-charcoal-border rounded-xl w-full max-w-lg">
      <div class="p-6 border-b border-charcoal-border">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-blue-500/20 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-blue-400" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12.01 1.485c-2.082 0-3.754.02-3.743.047.01.02 1.708 3.001 3.774 6.62l3.76 6.574h3.76c2.081 0 3.753-.02 3.742-.047-.01-.02-1.708-3.001-3.774-6.62l-3.76-6.574h-3.76zm-4.76 1.73a789.828 789.828 0 00-3.63 6.319L0 16.074l1.89 3.26 1.89 3.26h3.76l3.76-.007-1.89-3.26-1.89-3.26-3.76 6.513-1.87-3.24c-1.03-1.78-1.873-3.27-1.873-3.3 0-.03.844-1.52 1.873-3.3l1.87-3.24-1.87-3.24z"/>
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-medium text-cream">Connect to Google Drive</h3>
            <p class="text-sm text-cream/50">Set up backup to Google Drive</p>
          </div>
        </div>
      </div>

      <div class="p-6 space-y-4">
        <div class="p-4 bg-blue-500/10 rounded-lg border border-blue-500/20">
          <p class="text-sm text-cream/70">Click the button below to authorize Old Head Plastering to access your Google Drive. Your data will be stored in a dedicated folder.</p>
        </div>

        <div>
          <label class="block text-sm text-cream/70 mb-2">Drive Folder Name</label>
          <input type="text" id="gdrive-folder" value="OldHeadPlaster-Backup" class="w-full px-4 py-2.5 bg-charcoal border border-charcoal-border rounded-lg text-cream placeholder:text-cream/30 focus:outline-none focus:border-blue-500/50" />
          <p class="text-xs text-cream/40 mt-1">Folder in Google Drive where backups will be stored</p>
        </div>

        <div class="flex items-center gap-3">
          <input type="checkbox" id="gdrive-auto-backup" class="w-4 h-4 rounded border-charcoal-border bg-charcoal text-blue-500 focus:ring-blue-500/30" />
          <label for="gdrive-auto-backup" class="text-sm text-cream/70">Auto-backup daily</label>
        </div>
      </div>

      <div class="p-6 border-t border-charcoal-border flex justify-end gap-3">
        <button id="gdrive-cancel-btn" class="px-4 py-2 text-cream/70 hover:text-cream transition-colors">Cancel</button>
        <button id="gdrive-auth-btn" class="px-6 py-2 bg-blue-500 text-white font-medium rounded-lg hover:bg-blue-600 transition-colors flex items-center gap-2">
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
          Sign in with Google
        </button>
      </div>
    </div>
  </div>

  <!-- Clear Data Confirmation Modal -->
  <div id="clear-modal" class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 hidden items-center justify-center p-4">
    <div class="bg-charcoal-light border border-red-500/30 rounded-xl w-full max-w-md">
      <div class="p-6">
        <div class="flex items-center gap-3 mb-4">
          <div class="w-10 h-10 bg-red-500/20 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>
          <h3 class="text-lg font-medium text-cream">Clear All Data?</h3>
        </div>

        <p class="text-cream/70 mb-6">This will permanently delete all your projects, messages, documents, and events. This action cannot be undone.</p>

        <div class="flex justify-end gap-3">
          <button id="clear-cancel-btn" class="px-4 py-2 text-cream/70 hover:text-cream transition-colors">Cancel</button>
          <button id="clear-confirm-btn" class="px-6 py-2 bg-red-500 text-white font-medium rounded-lg hover:bg-red-600 transition-colors">Clear All Data</button>
        </div>
      </div>
    </div>
  </div>
</AdminLayout>

<script>
  const STORAGE_KEYS = {
    projects: 'oldhead_projects',
    messages: 'oldhead_messages',
    documents: 'oldhead_documents',
    events: 'oldhead_events',
    settings: 'oldhead_settings',
    syncConfig: 'oldhead_sync_config'
  };

  // Load settings
  function getSettings() {
    const stored = localStorage.getItem(STORAGE_KEYS.settings);
    if (stored) return JSON.parse(stored);
    return {
      businessName: 'Old Head Plastering',
      ownerName: 'Daragh',
      email: '',
      phone: ''
    };
  }

  function saveSettings(settings) {
    localStorage.setItem(STORAGE_KEYS.settings, JSON.stringify(settings));
  }

  // Load sync config
  function getSyncConfig() {
    const stored = localStorage.getItem(STORAGE_KEYS.syncConfig);
    if (stored) return JSON.parse(stored);
    return {
      obsidian: { connected: false, path: '', folder: 'OldHeadPlaster', autoSync: false },
      gdrive: { connected: false, folder: 'OldHeadPlaster-Backup', autoBackup: false }
    };
  }

  function saveSyncConfig(config) {
    localStorage.setItem(STORAGE_KEYS.syncConfig, JSON.stringify(config));
  }

  // Update storage status
  function updateStorageStatus() {
    const projects = JSON.parse(localStorage.getItem(STORAGE_KEYS.projects) || '[]');
    const messages = JSON.parse(localStorage.getItem(STORAGE_KEYS.messages) || '[]');
    const documents = JSON.parse(localStorage.getItem(STORAGE_KEYS.documents) || '[]');
    const events = JSON.parse(localStorage.getItem(STORAGE_KEYS.events) || '[]');

    document.getElementById('projects-count').textContent = projects.length;
    document.getElementById('messages-count').textContent = messages.length;
    document.getElementById('documents-count').textContent = documents.length;
    document.getElementById('events-count').textContent = events.length;
  }

  // Update sync status display
  function updateSyncStatus() {
    const config = getSyncConfig();

    const obsidianStatus = document.getElementById('obsidian-status');
    const obsidianBtn = document.getElementById('obsidian-connect-btn');
    if (config.obsidian.connected) {
      obsidianStatus.textContent = 'Connected';
      obsidianStatus.className = 'text-sm text-emerald-400';
      obsidianBtn.textContent = 'Configure';
      obsidianBtn.className = 'px-4 py-2 bg-emerald-500/20 text-emerald-400 text-sm font-medium rounded-lg hover:bg-emerald-500/30 transition-colors border border-emerald-500/30';
    }

    const gdriveStatus = document.getElementById('gdrive-status');
    const gdriveBtn = document.getElementById('gdrive-connect-btn');
    if (config.gdrive.connected) {
      gdriveStatus.textContent = 'Connected';
      gdriveStatus.className = 'text-sm text-emerald-400';
      gdriveBtn.textContent = 'Configure';
      gdriveBtn.className = 'px-4 py-2 bg-emerald-500/20 text-emerald-400 text-sm font-medium rounded-lg hover:bg-emerald-500/30 transition-colors border border-emerald-500/30';
    }
  }

  // Modal handlers
  const obsidianModal = document.getElementById('obsidian-modal');
  const gdriveModal = document.getElementById('gdrive-modal');
  const clearModal = document.getElementById('clear-modal');

  function showModal(modal) {
    modal.classList.remove('hidden');
    modal.classList.add('flex');
  }

  function hideModal(modal) {
    modal.classList.add('hidden');
    modal.classList.remove('flex');
  }

  // Obsidian handlers
  document.getElementById('obsidian-connect-btn').addEventListener('click', () => {
    const config = getSyncConfig();
    document.getElementById('obsidian-path').value = config.obsidian.path || '';
    document.getElementById('obsidian-folder').value = config.obsidian.folder || 'OldHeadPlaster';
    document.getElementById('obsidian-auto-sync').checked = config.obsidian.autoSync || false;
    showModal(obsidianModal);
  });

  document.getElementById('obsidian-cancel-btn').addEventListener('click', () => hideModal(obsidianModal));
  obsidianModal.addEventListener('click', (e) => {
    if (e.target === obsidianModal) hideModal(obsidianModal);
  });

  document.getElementById('obsidian-save-btn').addEventListener('click', () => {
    const config = getSyncConfig();
    config.obsidian = {
      connected: true,
      path: document.getElementById('obsidian-path').value,
      folder: document.getElementById('obsidian-folder').value,
      autoSync: document.getElementById('obsidian-auto-sync').checked
    };
    saveSyncConfig(config);
    updateSyncStatus();
    hideModal(obsidianModal);

    // Update last sync
    document.getElementById('last-sync').textContent = new Date().toLocaleString();
  });

  // Google Drive handlers
  document.getElementById('gdrive-connect-btn').addEventListener('click', () => {
    const config = getSyncConfig();
    document.getElementById('gdrive-folder').value = config.gdrive.folder || 'OldHeadPlaster-Backup';
    document.getElementById('gdrive-auto-backup').checked = config.gdrive.autoBackup || false;
    showModal(gdriveModal);
  });

  document.getElementById('gdrive-cancel-btn').addEventListener('click', () => hideModal(gdriveModal));
  gdriveModal.addEventListener('click', (e) => {
    if (e.target === gdriveModal) hideModal(gdriveModal);
  });

  document.getElementById('gdrive-auth-btn').addEventListener('click', () => {
    // In a real implementation, this would trigger OAuth flow
    // For now, we simulate a successful connection
    const config = getSyncConfig();
    config.gdrive = {
      connected: true,
      folder: document.getElementById('gdrive-folder').value,
      autoBackup: document.getElementById('gdrive-auto-backup').checked
    };
    saveSyncConfig(config);
    updateSyncStatus();
    hideModal(gdriveModal);

    document.getElementById('last-sync').textContent = new Date().toLocaleString();
  });

  // Clear data handlers
  document.getElementById('clear-data-btn').addEventListener('click', () => showModal(clearModal));
  document.getElementById('clear-cancel-btn').addEventListener('click', () => hideModal(clearModal));
  clearModal.addEventListener('click', (e) => {
    if (e.target === clearModal) hideModal(clearModal);
  });

  document.getElementById('clear-confirm-btn').addEventListener('click', () => {
    localStorage.removeItem(STORAGE_KEYS.projects);
    localStorage.removeItem(STORAGE_KEYS.messages);
    localStorage.removeItem(STORAGE_KEYS.documents);
    localStorage.removeItem(STORAGE_KEYS.events);
    updateStorageStatus();
    hideModal(clearModal);
  });

  // Export data
  document.getElementById('export-data-btn').addEventListener('click', () => {
    const data = {
      projects: JSON.parse(localStorage.getItem(STORAGE_KEYS.projects) || '[]'),
      messages: JSON.parse(localStorage.getItem(STORAGE_KEYS.messages) || '[]'),
      documents: JSON.parse(localStorage.getItem(STORAGE_KEYS.documents) || '[]'),
      events: JSON.parse(localStorage.getItem(STORAGE_KEYS.events) || '[]'),
      settings: getSettings(),
      exportedAt: new Date().toISOString()
    };

    const blob = new Blob([JSON.stringify(data, null, 2)], { type: 'application/json' });
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = `oldhead-backup-${new Date().toISOString().split('T')[0]}.json`;
    document.body.appendChild(a);
    a.click();
    document.body.removeChild(a);
    URL.revokeObjectURL(url);
  });

  // Import data
  const importInput = document.getElementById('import-file-input');
  document.getElementById('import-data-btn').addEventListener('click', () => importInput.click());

  importInput.addEventListener('change', (e) => {
    const file = e.target.files[0];
    if (!file) return;

    const reader = new FileReader();
    reader.onload = (event) => {
      try {
        const data = JSON.parse(event.target.result);

        if (data.projects) localStorage.setItem(STORAGE_KEYS.projects, JSON.stringify(data.projects));
        if (data.messages) localStorage.setItem(STORAGE_KEYS.messages, JSON.stringify(data.messages));
        if (data.documents) localStorage.setItem(STORAGE_KEYS.documents, JSON.stringify(data.documents));
        if (data.events) localStorage.setItem(STORAGE_KEYS.events, JSON.stringify(data.events));
        if (data.settings) saveSettings(data.settings);

        updateStorageStatus();
        alert('Data imported successfully!');
      } catch (err) {
        alert('Error importing data. Please check the file format.');
      }
    };
    reader.readAsText(file);
    importInput.value = '';
  });

  // Business settings
  const settings = getSettings();
  document.getElementById('business-name').value = settings.businessName || 'Old Head Plastering';
  document.getElementById('owner-name').value = settings.ownerName || 'Daragh';
  document.getElementById('business-email').value = settings.email || '';
  document.getElementById('business-phone').value = settings.phone || '';

  document.getElementById('save-business-btn').addEventListener('click', () => {
    const newSettings = {
      businessName: document.getElementById('business-name').value,
      ownerName: document.getElementById('owner-name').value,
      email: document.getElementById('business-email').value,
      phone: document.getElementById('business-phone').value
    };
    saveSettings(newSettings);

    // Show feedback
    const btn = document.getElementById('save-business-btn');
    const originalText = btn.textContent;
    btn.textContent = 'Saved!';
    btn.classList.add('bg-emerald-500');
    setTimeout(() => {
      btn.textContent = originalText;
      btn.classList.remove('bg-emerald-500');
    }, 2000);
  });

  // Initialize
  updateStorageStatus();
  updateSyncStatus();
</script>
