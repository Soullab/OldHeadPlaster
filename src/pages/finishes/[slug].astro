}

const { finish } = Astro.props;
const slug = Astro.params.slug;

// Convention-based image paths
const heroSrc = `/images/finishes/${slug}/hero.jpg`;
const gallerySrcs = [
  `/images/finishes/${slug}/01.jpg`,
  `/images/finishes/${slug}/02.jpg`,
  `/images/finishes/${slug}/03.jpg`,
];
---

<Layout title={`${finish.name} — ${finish.type}`} description={`${finish.name}: ${finish.tagline} ${finish.type} finish by Old Head Plaster. Sheen: ${finish.sheen}. Best for: ${finish.bestRooms.slice(0, 3).join(', ')}.`}>
  <!-- Back Link -->
  <div class="bg-cream py-4 border-b border-stone/50">
    <div class="max-w-7xl mx-auto px-6">
      <a href="/finishes" class="group inline-flex items-center gap-3 text-charcoal/60 hover:text-charcoal transition-colors duration-300">
        <svg class="w-4 h-4 transform group-hover:-translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
        </svg>
        <span class="relative">
          All Finishes
          <span class="absolute bottom-0 left-0 w-0 h-px bg-charcoal group-hover:w-full transition-all duration-300"></span>
        </span>
      </a>
    </div>
  </div>

  <!-- Hero -->
  <section class="relative py-16 md:py-24 bg-charcoal overflow-hidden">
    <div class="absolute inset-0 opacity-10" style="background-image: url('data:image/svg+xml,%3Csvg viewBox=%220 0 200 200%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cfilter id=%22noise%22%3E%3CfeTurbulence type=%22fractalNoise%22 baseFrequency=%220.65%22 numOctaves=%223%22 stitchTiles=%22stitch%22/%3E%3C/filter%3E%3Crect width=%22100%25%22 height=%22100%25%22 filter=%22url(%23noise)%22/%3E%3C/svg%3E');"></div>

    <div class="relative max-w-7xl mx-auto px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-center">
        <div>
          <div class="flex items-center gap-4 mb-4">
            <div class="w-8 h-px bg-bronze"></div>
            <p class="text-bronze text-sm tracking-[0.2em] uppercase font-medium">{finish.type}</p>
          </div>

          <h1 class="text-cream mb-4">{finish.name}</h1>
          <p class="text-cream/70 text-xl leading-relaxed mb-8">{finish.tagline}</p>

          <!-- Quick Specs -->
          <div class="grid grid-cols-3 gap-4 mb-8">
            <div class="border border-cream/20 p-4">
              <p class="text-cream/50 text-xs tracking-wide uppercase mb-1">Sheen</p>
              <p class="text-cream font-medium">{finish.sheen}</p>
            </div>
            <div class="border border-cream/20 p-4">
              <p class="text-cream/50 text-xs tracking-wide uppercase mb-1">Movement</p>
              <p class="text-cream font-medium">{finish.movement}</p>
            </div>
            <div class="border border-cream/20 p-4">
              <p class="text-cream/50 text-xs tracking-wide uppercase mb-1">Best Light</p>
              <p class="text-cream font-medium">{finish.bestLight}</p>
            </div>
          </div>

          <div class="flex flex-wrap gap-4">
            <a
              href="/contact?finish={finish.slug}"
              class="group relative inline-block px-8 py-4 bg-bronze text-charcoal font-medium tracking-[0.1em] uppercase text-sm overflow-hidden transition-all duration-500 hover:shadow-[0_8px_30px_rgba(201,136,33,0.4)]"
            >
              <span class="relative z-10">Request Sample Board</span>
              <div class="absolute inset-0 bg-cream transform -translate-x-full group-hover:translate-x-0 transition-transform duration-500"></div>
            </a>
            <a
              href="/showroom"
              class="inline-block px-8 py-4 border border-cream/30 text-cream tracking-[0.1em] uppercase text-sm hover:bg-cream hover:text-charcoal transition-all duration-300"
            >
              See in Showroom
            </a>
          </div>
        </div>

        <!-- Hero Image -->
        <div class="relative">
          <div class="aspect-square relative overflow-hidden rounded-sm">
            <img
              src={heroSrc}
              alt={`${finish.name} finish example`}
              class="w-full h-full object-cover"
              loading="eager"
              decoding="async"
            />

            <!-- Finish type badge -->
            <div class="absolute bottom-4 left-4 right-4 bg-charcoal/90 backdrop-blur-sm p-4">
              <p class="text-cream/50 text-xs tracking-wide uppercase mb-1">Finish Type</p>
              <p class="text-cream font-medium">{finish.type}</p>
            </div>
          </div>

          <!-- QR indicator -->
          <div class="absolute -top-3 -right-3 w-16 h-16 bg-cream flex items-center justify-center shadow-lg">
            <svg class="w-8 h-8 text-charcoal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z" />
            </svg>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Description -->
  <section class="py-16 bg-cream">
    <div class="max-w-4xl mx-auto px-6">
      <p class="text-charcoal/80 text-xl leading-relaxed">
        {finish.description}
      </p>
    </div>
  </section>

  <!-- Gallery: In Real Spaces -->
  <section class="py-16 bg-stone/30">
    <div class="max-w-7xl mx-auto px-6">
      <div class="flex items-center gap-4 mb-8">
        <div class="w-8 h-px bg-bronze"></div>
        <h2 class="text-2xl font-heading text-charcoal">In Real Spaces</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {gallerySrcs.map((src, index) => (
          <div class="aspect-[4/3] relative overflow-hidden group">
            <img
              src={src}
              alt={`${finish.name} example ${index + 1}`}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
              loading="lazy"
              decoding="async"
              onerror="this.parentElement.style.display='none'"
            />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Technical Specifications -->
  <section class="py-16 bg-stone/30">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <!-- Specs Column -->
        <div class="lg:col-span-2">
          <h2 class="text-2xl font-heading text-charcoal mb-8">Technical Specifications</h2>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="bg-cream p-6 border border-stone/50">
              <h3 class="text-sm tracking-[0.15em] uppercase text-charcoal/50 mb-4">Composition</h3>
              <p class="text-charcoal">{finish.composition}</p>
            </div>
            <div class="bg-cream p-6 border border-stone/50">
              <h3 class="text-sm tracking-[0.15em] uppercase text-charcoal/50 mb-4">Texture</h3>
              <p class="text-charcoal">{finish.texture}</p>
            </div>
            <div class="bg-cream p-6 border border-stone/50">
              <h3 class="text-sm tracking-[0.15em] uppercase text-charcoal/50 mb-4">Thickness</h3>
              <p class="text-charcoal">{finish.thickness}</p>
            </div>
            <div class="bg-cream p-6 border border-stone/50">
              <h3 class="text-sm tracking-[0.15em] uppercase text-charcoal/50 mb-4">Curing Time</h3>
              <p class="text-charcoal">{finish.curing}</p>
            </div>
          </div>
        </div>

        <!-- Colorways -->
        <div>
          <h2 class="text-2xl font-heading text-charcoal mb-8">Available Colorways</h2>

          <div class="space-y-4">
            {finish.colorways.map((color) => (
              <div class="bg-cream p-4 border border-stone/50 flex items-start gap-4">
                <div class="w-12 h-12 bg-gradient-to-br from-plaster to-stone shrink-0"></div>
                <div>
                  <p class="text-charcoal font-medium">{color.name}</p>
                  <p class="text-charcoal/60 text-sm">{color.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Best Rooms + Pairs With -->
  <section class="py-16 bg-cream">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
        <!-- Best Rooms -->
        <div>
          <h3 class="text-lg font-heading text-charcoal mb-4 flex items-center gap-3">
            <svg class="w-5 h-5 text-bronze" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Best For
          </h3>
          <ul class="space-y-2">
            {finish.bestRooms.map((room) => (
              <li class="text-charcoal/70 flex items-center gap-2">
                <div class="w-1.5 h-1.5 rounded-full bg-bronze"></div>
                {room}
              </li>
            ))}
          </ul>
        </div>

        <!-- Not Recommended -->
        <div>
          <h3 class="text-lg font-heading text-charcoal mb-4 flex items-center gap-3">
            <svg class="w-5 h-5 text-charcoal/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            Not Recommended
          </h3>
          <ul class="space-y-2">
            {finish.notRecommended.map((item) => (
              <li class="text-charcoal/50 flex items-start gap-2">
                <div class="w-1.5 h-1.5 rounded-full bg-charcoal/30 mt-2 shrink-0"></div>
                {item}
              </li>
            ))}
          </ul>
        </div>

        <!-- Pairs With -->
        <div>
          <h3 class="text-lg font-heading text-charcoal mb-4 flex items-center gap-3">
            <svg class="w-5 h-5 text-bronze" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
            Pairs Beautifully With
          </h3>
          <ul class="space-y-2">
            {finish.pairsWith.map((item) => (
              <li class="text-charcoal/70 flex items-center gap-2">
                <div class="w-1.5 h-1.5 rounded-full bg-bronze"></div>
                {item}
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Care Instructions -->
  <section class="py-16 bg-stone/30">
    <div class="max-w-4xl mx-auto px-6">
      <div class="flex items-center gap-4 mb-6">
        <div class="w-8 h-px bg-bronze"></div>
        <h2 class="text-2xl font-heading text-charcoal">Care & Maintenance</h2>
      </div>

      <div class="bg-cream p-8 border border-stone/50">
        <ul class="space-y-4">
          {finish.care.map((instruction) => (
            <li class="flex items-start gap-4 text-charcoal/70">
              <svg class="w-5 h-5 text-bronze shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span>{instruction}</span>
            </li>
          ))}
        </ul>

        <div class="mt-6 pt-6 border-t border-stone/50">
          <a href="/care" class="text-bronze hover:text-charcoal transition-colors text-sm inline-flex items-center gap-2">
            Full care guide
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Projects -->
  {finish.projects.length > 0 && (
    <section class="py-16 bg-cream">
      <div class="max-w-7xl mx-auto px-6">
        <div class="flex items-center gap-4 mb-8">
          <div class="w-8 h-px bg-bronze"></div>
          <h2 class="text-2xl font-heading text-charcoal">See This Finish In Action</h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {finish.projects.map((projectTitle) => (
            <a href={`/work/${projectTitle.toLowerCase().replace(/ /g, '-')}`} class="group block">
              <div class="aspect-[16/10] bg-gradient-to-br from-plaster to-stone relative overflow-hidden mb-4">
                <div class="absolute inset-0 opacity-20" style="background-image: url('data:image/svg+xml,%3Csvg viewBox=%220 0 200 200%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cfilter id=%22noise%22%3E%3CfeTurbulence type=%22fractalNoise%22 baseFrequency=%220.65%22 numOctaves=%223%22 stitchTiles=%22stitch%22/%3E%3C/filter%3E%3Crect width=%22100%25%22 height=%22100%25%22 filter=%22url(%23noise)%22/%3E%3C/svg%3E');"></div>
                <div class="absolute inset-0 bg-charcoal/0 group-hover:bg-charcoal/20 transition-colors duration-300"></div>
              </div>
              <h3 class="text-lg font-heading text-charcoal group-hover:text-bronze transition-colors">{projectTitle}</h3>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- CTA -->
  <section class="relative py-24 bg-charcoal overflow-hidden">
    <div class="absolute inset-0 opacity-5" style="background-image: url('data:image/svg+xml,%3Csvg viewBox=%220 0 200 200%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cfilter id=%22noise%22%3E%3CfeTurbulence type=%22fractalNoise%22 baseFrequency=%220.65%22 numOctaves=%223%22 stitchTiles=%22stitch%22/%3E%3C/filter%3E%3Crect width=%22100%25%22 height=%22100%25%22 filter=%22url(%23noise)%22/%3E%3C/svg%3E');"></div>

