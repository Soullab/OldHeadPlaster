---
import Layout from '../layouts/Layout.astro';

const collections = [
  {
    name: 'Venetian Plaster',
    count: '24+ samples',
    description: 'Traditional lime-based finishes from matte to high polish. Italian imports and custom-mixed formulations.',
    highlights: ['Marmorino', 'Stucco Lustro', 'Grassello di Calce', 'Textured variations'],
    image: '/images/Website/20220124_163453.jpg'
  },
  {
    name: 'Lime Wash',
    count: '18+ samples',
    description: 'Breathable mineral finishes in curated palettes. Soft color washes to saturated pigments.',
    highlights: ['Pure lime whites', 'Earth tones', 'Custom color matches', 'Layered effects'],
    image: '/images/Website/20221012_132132.jpg'
  },
  {
    name: 'Microcement',
    count: '16+ samples',
    description: 'Seamless cement coatings for walls, floors, and wet areas. Multiple textures and sealer options.',
    highlights: ['Floor grades', 'Wall finishes', 'Wet area systems', 'Polished to matte'],
    image: '/images/Website/20241024_135059.jpg'
  },
  {
    name: 'Specialty Finishes',
    count: '12+ samples',
    description: 'Metallic plasters, oxidized effects, and textured treatments for distinctive applications.',
    highlights: ['Metallic lusters', 'Oxidized patinas', 'Heavy textures', 'Custom effects'],
    image: '/images/Website/20200910_093606~2.jpg'
  }
];

const features = [
  {
    icon: 'scale',
    title: 'Full-Scale Boards',
    description: 'Every sample is a minimum 12"×12" — large enough to evaluate texture, depth, and how light plays across the surface. No tiny swatches.'
  },
  {
    icon: 'qr',
    title: 'QR-Coded Specifications',
    description: 'Each sample board is tagged with a QR code linking to complete specifications: material name, application method, sheen level, and substrate requirements.'
  },
  {
    icon: 'light',
    title: 'Controlled Lighting',
    description: 'View samples under warm, cool, and natural lighting conditions. See exactly how a finish will behave in different environments.'
  },
  {
    icon: 'custom',
    title: 'Custom Sample Creation',
    description: 'Can\'t find exactly what you need? We create custom sample boards for your specific project — available within 5 business days.'
  }
];

const carouselImages = [
  { src: '/images/Website/20241024_135059.jpg', alt: 'Microcement bathroom with calacatta marble' },
  { src: '/images/Website/20220311_162443.jpg', alt: 'Fireplace with crown molding transition' },
  { src: '/images/Website/20241011_173659~4.jpg', alt: 'Marbled plaster close-up' },
  { src: '/images/Website/20220124_163453.jpg', alt: 'Dark venetian with depth' },
  { src: '/images/Website/20200910_093606~2.jpg', alt: 'Metallic patina texture' },
  { src: '/images/Website/20221012_132132.jpg', alt: 'Gray plaster room with oval window' },
  { src: '/images/Website/20220309_151608.jpg', alt: 'Tadelakt bathroom seamless finish' },
  { src: '/images/Website/20240913_170334.jpg', alt: 'Shower niches with perfect corners' },
];
---

<Layout title="Material Library" description="Full-scale sample boards, QR-coded specifications, and expert consultation. See every finish at scale before you specify.">
  <!-- Hero -->
  <section class="relative py-28 md:py-36 overflow-hidden">
    <div class="absolute inset-0">
      <img
        src="/images/Website/20200910_093606~2.jpg"
        alt="Metallic patina plaster texture"
        class="w-full h-full object-cover"
        loading="eager"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-stone/95 via-stone/80 to-stone/60"></div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="flex items-center gap-4 mb-6">
            <div class="w-12 h-px bg-bronze"></div>
            <p class="text-bronze text-sm tracking-[0.2em] uppercase font-medium">Fairfield County</p>
          </div>
          <h1 class="text-charcoal mb-6">The Material Library</h1>
          <p class="text-charcoal/70 text-lg leading-relaxed mb-8">
            Choosing a plaster finish from photos is guesswork. Here, you'll see 70+ full-scale sample boards — each QR-coded with complete specifications — under controlled lighting conditions. Touch the textures. Compare the sheens. Make decisions with certainty.
          </p>

          <div class="flex flex-wrap gap-4">
            <a
              href="/contact?type=library"
              class="group relative inline-block px-8 py-4 bg-charcoal text-cream font-medium tracking-[0.1em] uppercase text-sm overflow-hidden transition-all duration-500 hover:shadow-[0_8px_30px_rgba(45,42,38,0.3)]"
            >
              <span class="relative z-10 flex items-center gap-2">
                Schedule a Visit
                <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </span>
              <div class="absolute inset-0 bg-bronze transform -translate-x-full group-hover:translate-x-0 transition-transform duration-500"></div>
            </a>
            <a
              href="tel:+18605747004"
              class="inline-block px-8 py-4 border border-charcoal/30 text-charcoal tracking-[0.1em] uppercase text-sm hover:bg-charcoal hover:text-cream transition-all duration-300"
            >
              860-574-7004
            </a>
          </div>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-2 gap-6">
          <div class="bg-cream/80 backdrop-blur-sm p-6 text-center">
            <div class="text-4xl font-heading text-bronze mb-2">70+</div>
            <div class="text-charcoal text-sm">Sample Boards</div>
          </div>
          <div class="bg-cream/80 backdrop-blur-sm p-6 text-center">
            <div class="text-4xl font-heading text-bronze mb-2">4</div>
            <div class="text-charcoal text-sm">Finish Categories</div>
          </div>
          <div class="bg-cream/80 backdrop-blur-sm p-6 text-center">
            <div class="text-4xl font-heading text-bronze mb-2">QR</div>
            <div class="text-charcoal text-sm">Coded Specs</div>
          </div>
          <div class="bg-cream/80 backdrop-blur-sm p-6 text-center">
            <div class="text-4xl font-heading text-bronze mb-2">5</div>
            <div class="text-charcoal text-sm">Day Custom Samples</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Hero Carousel -->
  <div class="bg-stone py-4 overflow-hidden border-y border-stone/50">
    <div class="carousel-track flex gap-4 animate-scroll">
      {[...carouselImages, ...carouselImages].map((img) => (
        <div class="flex-shrink-0 w-72 h-48 overflow-hidden">
          <img
            src={img.src}
            alt={img.alt}
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
            loading="lazy"
          />
        </div>
      ))}
    </div>
  </div>

  <!-- Collections -->
  <section class="py-20 bg-cream">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-16">
        <div class="flex items-center justify-center gap-4 mb-4">
          <div class="w-8 h-px bg-bronze"></div>
          <p class="text-bronze text-sm tracking-[0.2em] uppercase font-medium">Sample Collections</p>
          <div class="w-8 h-px bg-bronze"></div>
        </div>
        <h2 class="text-charcoal mb-4">What You'll Find</h2>
        <p class="text-charcoal/60 max-w-2xl mx-auto">
          Four curated collections covering the full spectrum of decorative plaster finishes. Each sample is documented, photographed, and ready for specification.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {collections.map((collection) => (
          <div class="group overflow-hidden hover:shadow-lg transition-shadow duration-500">
            <!-- Image -->
            <div class="aspect-[16/9] relative overflow-hidden">
              <img
                src={collection.image}
                alt={collection.name}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-charcoal/60 to-transparent"></div>
              <div class="absolute bottom-4 left-4">
                <h3 class="text-xl font-heading text-cream mb-1">{collection.name}</h3>
                <p class="text-bronze text-sm">{collection.count}</p>
              </div>
            </div>
            <!-- Content -->
            <div class="bg-stone p-6">
              <p class="text-charcoal/70 leading-relaxed mb-4">{collection.description}</p>
              <div class="flex flex-wrap gap-2">
                {collection.highlights.map((item) => (
                  <span class="px-3 py-1 bg-cream text-charcoal/70 text-xs tracking-wide">{item}</span>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="py-20 bg-charcoal relative overflow-hidden">
    <div class="absolute inset-0">
      <img
        src="/images/Website/20221012_132132.jpg"
        alt="Gray plaster room"
        class="w-full h-full object-cover opacity-20"
        loading="lazy"
      />
      <div class="absolute inset-0 bg-charcoal/80"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-6">
      <div class="text-center mb-16">
        <div class="flex items-center justify-center gap-4 mb-4">
          <div class="w-8 h-px bg-bronze/60"></div>
          <p class="text-bronze text-sm tracking-[0.2em] uppercase font-medium">The Difference</p>
          <div class="w-8 h-px bg-bronze/60"></div>
        </div>
        <h2 class="text-cream">More Than a Showroom</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {features.map((feature, index) => (
          <div class="relative overflow-hidden group">
            <div class="absolute inset-0">
              <img
                src={index === 0 ? '/images/Website/20241024_135059.jpg' : index === 1 ? '/images/Website/20240913_170334.jpg' : index === 2 ? '/images/Website/20220124_163453.jpg' : '/images/Website/20220311_162443.jpg'}
                alt=""
                class="w-full h-full object-cover opacity-60 group-hover:opacity-70 transition-opacity duration-500"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-charcoal/80 via-charcoal/40 to-charcoal/20"></div>
            </div>
            <div class="relative p-8 border border-cream/20">
              <div class="w-12 h-12 border border-cream/20 rounded-full flex items-center justify-center mb-6 bg-charcoal/50 backdrop-blur-sm">
                {feature.icon === 'scale' && (
                  <svg class="w-6 h-6 text-bronze" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4" />
                  </svg>
                )}
                {feature.icon === 'qr' && (
                  <svg class="w-6 h-6 text-bronze" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h2M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z" />
                  </svg>
                )}
                {feature.icon === 'light' && (
                  <svg class="w-6 h-6 text-bronze" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
                  </svg>
                )}
                {feature.icon === 'custom' && (
                  <svg class="w-6 h-6 text-bronze" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z" />
                  </svg>
                )}
              </div>
              <h3 class="text-lg font-heading text-cream mb-3">{feature.title}</h3>
              <p class="text-cream/70 leading-relaxed">{feature.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- For Trade -->
  <section class="py-20 bg-stone">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div>
          <div class="flex items-center gap-4 mb-4">
            <div class="w-8 h-px bg-bronze"></div>
            <p class="text-bronze text-sm tracking-[0.2em] uppercase font-medium">For Trade</p>
          </div>

          <h2 class="text-charcoal mb-6">Bring Your Clients</h2>

          <p class="text-charcoal/70 leading-relaxed mb-6">
            The Material Library is designed for professional use. Bring your clients to see finishes in person, or request sample boards sent to your studio for design development.
          </p>

          <ul class="space-y-4 mb-8">
            <li class="flex items-start gap-3 text-charcoal/70">
              <svg class="w-5 h-5 text-bronze flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Private appointments available for client presentations</span>
            </li>
            <li class="flex items-start gap-3 text-charcoal/70">
              <svg class="w-5 h-5 text-bronze flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Sample boards available for loan or purchase</span>
            </li>
            <li class="flex items-start gap-3 text-charcoal/70">
              <svg class="w-5 h-5 text-bronze flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Custom samples created to your specifications</span>
            </li>
            <li class="flex items-start gap-3 text-charcoal/70">
              <svg class="w-5 h-5 text-bronze flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Complete specification documentation provided</span>
            </li>
          </ul>

          <a
            href="/professionals"
            class="group inline-flex items-center gap-2 text-charcoal hover:text-bronze transition-colors"
          >
            <span class="text-sm tracking-wide uppercase font-medium">Trade Resources</span>
            <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>

        <!-- Visual -->
        <div class="aspect-square relative overflow-hidden">
          <img
            src="/images/Website/20241011_173659~4.jpg"
            alt="Marbled plaster sample close-up showing depth and texture"
            class="absolute inset-0 w-full h-full object-cover"
            loading="lazy"
          />
          <div class="absolute inset-0 bg-charcoal/10"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Share Section -->
  <section class="py-16 bg-charcoal">
    <div class="max-w-4xl mx-auto px-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <div class="flex items-center gap-4 mb-4">
            <div class="w-8 h-px bg-bronze"></div>
            <p class="text-bronze text-sm tracking-[0.2em] uppercase font-medium">Share</p>
          </div>
          <h2 class="text-cream text-2xl md:text-3xl font-heading mb-4">Send to Your Client or Colleague</h2>
          <p class="text-cream/60 leading-relaxed mb-6">
            Planning a project with a designer or architect? Share our Material Library directly.
            Scan or download the QR code to send via text, email, or add to your project specs.
          </p>
          <a
            href="/images/qr-code-showroom.svg"
            download="oldhead-material-library-qr.svg"
            class="inline-flex items-center gap-3 px-6 py-3 bg-bronze text-charcoal font-medium tracking-wide text-sm uppercase hover:bg-bronze/90 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
            </svg>
            Download QR Code
          </a>
        </div>
        <div class="flex justify-center">
          <div class="bg-cream p-4 rounded-lg shadow-2xl">
            <img
              src="/images/qr-code-showroom.svg"
              alt="QR Code - Scan to visit Old Head Material Library"
              class="w-48 h-48"
            />
            <p class="text-center text-charcoal/60 text-xs mt-2">Scan to visit Material Library</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Location & Booking -->
  <section class="py-20 bg-stone relative overflow-hidden">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-px h-16 bg-gradient-to-b from-cream to-transparent"></div>

    <div class="max-w-7xl mx-auto px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <!-- Booking -->
        <div>
          <div class="flex items-center gap-4 mb-4">
            <div class="w-8 h-px bg-bronze"></div>
            <p class="text-bronze text-sm tracking-[0.2em] uppercase font-medium">Visit</p>
          </div>

          <h2 class="text-charcoal mb-6">Schedule Your Appointment</h2>

          <p class="text-charcoal/70 leading-relaxed mb-8">
            All visits are by appointment only, ensuring you have dedicated time and attention. Most consultations run 45–90 minutes depending on project scope.
          </p>

          <div class="bg-cream p-8">
            <div class="space-y-6">
              <a
                href="/contact?type=library"
                class="group relative block w-full px-8 py-5 bg-charcoal text-cream font-medium tracking-[0.1em] uppercase text-sm text-center overflow-hidden transition-all duration-500 hover:shadow-[0_8px_30px_rgba(45,42,38,0.3)]"
              >
                <span class="relative z-10">Request Appointment</span>
                <div class="absolute inset-0 bg-bronze transform -translate-x-full group-hover:translate-x-0 transition-transform duration-500"></div>
              </a>

              <div class="flex items-center gap-4">
                <div class="flex-1 h-px bg-charcoal/10"></div>
                <span class="text-charcoal/40 text-sm">or call directly</span>
                <div class="flex-1 h-px bg-charcoal/10"></div>
              </div>

              <a
                href="tel:+18605747004"
                class="flex items-center justify-center gap-3 text-charcoal hover:text-bronze transition-colors"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span class="text-lg font-medium">860-574-7004</span>
              </a>
            </div>
          </div>
        </div>

        <!-- Location Info -->
        <div>
          <div class="flex items-center gap-4 mb-4">
            <div class="w-8 h-px bg-bronze"></div>
            <p class="text-bronze text-sm tracking-[0.2em] uppercase font-medium">Location</p>
          </div>

          <h2 class="text-charcoal mb-10">Find Us</h2>

          <div class="space-y-8">
            <div class="flex gap-4">
              <div class="w-10 h-10 bg-cream rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-charcoal/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h4 class="font-medium text-charcoal mb-1">Old Head Material Library</h4>
                <p class="text-charcoal/60">Fairfield County, Connecticut</p>
                <p class="text-charcoal/40 text-sm">(Full address provided upon booking)</p>
              </div>
            </div>

            <div class="flex gap-4">
              <div class="w-10 h-10 bg-cream rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-charcoal/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h4 class="font-medium text-charcoal mb-1">Hours</h4>
                <p class="text-charcoal/60">By appointment only</p>
                <p class="text-charcoal/40 text-sm">Weekdays and weekends available</p>
              </div>
            </div>

            <div class="flex gap-4">
              <div class="w-10 h-10 bg-cream rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-charcoal/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
                </svg>
              </div>
              <div>
                <h4 class="font-medium text-charcoal mb-1">Service Area</h4>
                <p class="text-charcoal/60">Greenwich, Westport, Fairfield, New Haven, and throughout Connecticut and the tri-state area.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
