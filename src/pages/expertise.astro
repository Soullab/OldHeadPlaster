---
import Layout from '../layouts/Layout.astro';

const carouselImages = [
  { src: '/images/Website/20241024_135059.jpg', alt: 'Microcement bathroom with calacatta marble' },
  { src: '/images/Website/20220311_162443.jpg', alt: 'Fireplace with crown molding transition' },
  { src: '/images/Website/20241011_173659~4.jpg', alt: 'Marbled plaster close-up' },
  { src: '/images/Website/20220124_163453.jpg', alt: 'Dark venetian with depth' },
  { src: '/images/Website/20200910_093606~2.jpg', alt: 'Metallic patina texture' },
  { src: '/images/Website/20221012_132132.jpg', alt: 'Gray plaster room with oval window' },
  { src: '/images/Website/20220309_151608.jpg', alt: 'Tadelakt bathroom seamless finish' },
  { src: '/images/Website/20240913_170334.jpg', alt: 'Shower niches with perfect corners' },
];

const disciplines = [
  {
    id: 'venetian-plaster',
    name: 'Venetian Plaster',
    tagline: 'The Crown Jewel of Decorative Finishes',
    description: 'Multiple layers of lime and marble dust, applied by hand and burnished to a subtle, luminous depth that catches light in ways no paint ever could. This is the finish that made Italian palazzos famous — and it demands the same patience today.',
    expertise: [
      'Traditional lime-based formulations with natural marble dust',
      'Multi-coat application with proper cure times between layers',
      'Hand burnishing for controlled sheen and depth',
      'Custom color development and on-site matching',
      'Restoration of existing Venetian plaster surfaces'
    ],
    applications: 'Feature walls, dining rooms, foyers, and any space where light quality matters.',
    note: 'We maintain relationships with Italian material suppliers for projects requiring authentic imported plasters.'
  },
  {
    id: 'lime-wash',
    name: 'Lime Wash',
    tagline: 'Ancient Technique, Living Walls',
    description: 'A breathable, mineral finish with soft, cloudy variations that shift with the light. Lime washing creates walls that feel alive — naturally antibacterial, humidity-regulating, and developing character as they age.',
    expertise: [
      'Pure lime and natural mineral pigments',
      'Proper substrate preparation for adhesion and longevity',
      'Controlled application for even color distribution',
      'Multi-coat techniques for depth and saturation',
      'Touch-up protocols that blend seamlessly'
    ],
    applications: 'Beach houses, Mediterranean-style architecture, bedrooms, and anywhere organic warmth is desired.',
    note: 'Lime wash is forgiving to live with — touch-ups blend naturally, and the finish improves with age.'
  },
  {
    id: 'microcement',
    name: 'Microcement',
    tagline: 'Seamless Contemporary Surfaces',
    description: 'A thin, polymer-modified cement coating that creates monolithic, seamless surfaces. Applied in layers just millimeters thick, microcement transforms walls, floors, and wet areas into sculptural statements without the demolition of traditional concrete work.',
    expertise: [
      'Waterproof systems for showers and wet areas',
      'Overlay applications on existing tile and surfaces',
      'Floor-to-wall transitions without seams',
      'Precise color matching and custom tinting',
      'Sealer selection for specific use conditions'
    ],
    applications: 'Modern kitchens, bathrooms, showers, floors, and minimalist spaces seeking clean, continuous surfaces.',
    note: 'We use commercial-grade systems rated for heavy traffic and daily wet exposure.'
  },
  {
    id: 'historic-restoration',
    name: 'Historic Plaster Restoration',
    tagline: 'Preserving Original Craftsmanship',
    description: 'Restoring historic plasterwork requires more than skill — it requires understanding of period materials and techniques. We repair, stabilize, and restore original plaster using lime-based materials that are compatible with historic construction.',
    expertise: [
      'Condition assessment and documentation',
      'Stabilization of delaminating and failing plaster',
      'Matching of original textures, profiles, and finishes',
      'Traditional lime-based repair materials',
      'Integration with existing ornamental schemes'
    ],
    applications: 'Pre-war homes, historic properties, landmark buildings, and renovation projects preserving original character.',
    note: 'EPA Lead-Safe Certified for work in pre-1978 structures. We work regularly with historic commissions.'
  },
  {
    id: 'ornamental',
    name: 'Ornamental Mouldings',
    tagline: 'Classical Detail, Period Accuracy',
    description: 'Crown mouldings, ceiling medallions, corbels, and decorative elements — either restored to their original condition or created new using traditional running and casting techniques. This is plasterwork as sculpture.',
    expertise: [
      'Traditional running mould technique for linear elements',
      'Custom profile creation matched to existing architecture',
      'Casting and installation of decorative elements',
      'Repair and replication of damaged ornament',
      'Hand-finished details and final fitting'
    ],
    applications: 'Historic homes, classical architecture, ceiling restorations, and projects requiring period-appropriate detail.',
    note: 'We can match existing profiles or work from architectural drawings to create new classical details.'
  }
];
---

<Layout title="Expertise" description="Venetian plaster, lime wash, microcement, historic restoration, and ornamental mouldings. Specialist disciplines mastered over two decades of practice.">
  <!-- Hero -->
  <section class="relative py-24 md:py-32 bg-stone overflow-hidden">
    <div class="absolute inset-0 opacity-20" style="background-image: url('data:image/svg+xml,%3Csvg viewBox=%220 0 200 200%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cfilter id=%22noise%22%3E%3CfeTurbulence type=%22fractalNoise%22 baseFrequency=%220.65%22 numOctaves=%223%22 stitchTiles=%22stitch%22/%3E%3C/filter%3E%3Crect width=%22100%25%22 height=%22100%25%22 filter=%22url(%23noise)%22/%3E%3C/svg%3E');"></div>

    <div class="relative max-w-7xl mx-auto px-6">
      <div class="flex items-center gap-4 mb-4">
        <div class="w-12 h-px bg-bronze"></div>
        <p class="text-bronze text-sm tracking-[0.2em] uppercase font-medium">Specialist Disciplines</p>
      </div>
      <h1 class="text-charcoal mb-6">Expertise</h1>
      <p class="text-charcoal/70 text-lg max-w-2xl leading-relaxed">
        Five disciplines, each mastered over decades of practice. Every finish has its purpose. Every space deserves the right one — applied by hands that understand the material.
      </p>
    </div>
  </section>

  <!-- Image Carousel -->
  <div class="bg-charcoal py-4 overflow-hidden border-t border-charcoal-border">
    <div class="carousel-track flex gap-4 animate-scroll">
      {[...carouselImages, ...carouselImages].map((img) => (
        <div class="flex-shrink-0 w-72 h-48 overflow-hidden">
          <img
            src={img.src}
            alt={img.alt}
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
            loading="lazy"
          />
        </div>
      ))}
    </div>
  </div>

  <!-- Quick Nav -->
  <section class="py-6 bg-cream border-b border-stone/50 sticky top-[73px] z-40">
    <div class="max-w-7xl mx-auto px-6">
      <div class="flex flex-wrap gap-3">
        {disciplines.map((discipline) => (
          <a
            href={`#${discipline.id}`}
            class="px-5 py-2.5 text-sm tracking-[0.1em] uppercase bg-transparent text-charcoal/60 hover:text-charcoal border border-stone hover:border-charcoal/30 transition-all duration-300 relative overflow-hidden group"
          >
            <span class="relative z-10">{discipline.name}</span>
            <div class="absolute inset-0 bg-stone transform -translate-x-full group-hover:translate-x-0 transition-transform duration-300"></div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Disciplines -->
  {disciplines.map((discipline, index) => (
    <section
      id={discipline.id}
      class:list={[
        'py-20 md:py-28 scroll-mt-32',
        index % 2 === 0 ? 'bg-cream' : 'bg-stone'
      ]}
    >
      <div class="max-w-7xl mx-auto px-6">
        <div class:list={[
          'grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-start',
          index % 2 === 1 ? 'lg:grid-flow-dense' : ''
        ]}>
          <!-- Image -->
          <div class:list={[
            'aspect-[4/3] relative overflow-hidden group sticky top-32',
            index % 2 === 1 ? 'lg:col-start-2' : ''
          ]}>
            <div class="absolute inset-0 bg-gradient-to-br from-plaster to-cream">
              <div class="absolute inset-0 opacity-20" style="background-image: url('data:image/svg+xml,%3Csvg viewBox=%220 0 200 200%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cfilter id=%22noise%22%3E%3CfeTurbulence type=%22fractalNoise%22 baseFrequency=%220.65%22 numOctaves=%223%22 stitchTiles=%22stitch%22/%3E%3C/filter%3E%3Crect width=%22100%25%22 height=%22100%25%22 filter=%22url(%23noise)%22/%3E%3C/svg%3E');"></div>
            </div>
            <!-- Decorative frame -->
            <div class="absolute inset-4 border border-charcoal/10"></div>
          </div>

          <!-- Content -->
          <div class:list={[
            index % 2 === 1 ? 'lg:col-start-1' : ''
          ]}>
            <div class="flex items-center gap-4 mb-4">
              <div class="w-8 h-px bg-bronze"></div>
              <p class="text-bronze text-sm tracking-[0.2em] uppercase font-medium">{discipline.tagline}</p>
            </div>

            <h2 class="text-charcoal mb-6">{discipline.name}</h2>

            <p class="text-charcoal/70 text-lg leading-relaxed mb-8">
              {discipline.description}
            </p>

            <!-- Expertise List -->
            <div class="mb-8">
              <h3 class="text-sm font-medium text-charcoal mb-4 tracking-wide uppercase">Technical Expertise</h3>
              <ul class="space-y-3">
                {discipline.expertise.map((item) => (
                  <li class="flex items-start gap-3 text-charcoal/60">
                    <svg class="w-5 h-5 text-bronze flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span>{item}</span>
                  </li>
                ))}
              </ul>
            </div>

            <!-- Applications -->
            <div class="mb-8 pb-8 border-b border-charcoal/10">
              <h3 class="text-sm font-medium text-charcoal mb-2 tracking-wide uppercase">Best Applications</h3>
              <p class="text-charcoal/60 leading-relaxed">{discipline.applications}</p>
            </div>

            <!-- Note -->
            <div class="bg-charcoal/5 px-6 py-4">
              <p class="text-charcoal/70 text-sm leading-relaxed italic">{discipline.note}</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  ))}

  <!-- Why This Matters -->
  <section class="py-20 bg-charcoal relative overflow-hidden">
    <div class="absolute inset-0 opacity-5" style="background-image: url('data:image/svg+xml,%3Csvg viewBox=%220 0 200 200%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cfilter id=%22noise%22%3E%3CfeTurbulence type=%22fractalNoise%22 baseFrequency=%220.65%22 numOctaves=%223%22 stitchTiles=%22stitch%22/%3E%3C/filter%3E%3Crect width=%22100%25%22 height=%22100%25%22 filter=%22url(%23noise)%22/%3E%3C/svg%3E');"></div>

    <div class="relative max-w-7xl mx-auto px-6">
      <div class="text-center mb-16">
        <div class="flex items-center justify-center gap-4 mb-4">
          <div class="w-8 h-px bg-bronze/60"></div>
          <p class="text-bronze text-sm tracking-[0.2em] uppercase font-medium">The Difference</p>
          <div class="w-8 h-px bg-bronze/60"></div>
        </div>
        <h2 class="text-cream">Why Specialization Matters</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
        <div class="text-center">
          <div class="w-16 h-16 border border-cream/20 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-7 h-7 text-bronze" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <h3 class="text-lg font-heading text-cream mb-3">One Craftsman</h3>
          <p class="text-cream/50 leading-relaxed">
            You work directly with Daragh — not a salesperson, not a rotating crew. The same hands that quote your project apply every coat.
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 border border-cream/20 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-7 h-7 text-bronze" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
            </svg>
          </div>
          <h3 class="text-lg font-heading text-cream mb-3">Material Knowledge</h3>
          <p class="text-cream/50 leading-relaxed">
            Twenty years working with lime, marble dust, and cement teaches you things no product sheet can. We understand how materials behave.
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 border border-cream/20 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-7 h-7 text-bronze" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-heading text-cream mb-3">Proper Time</h3>
          <p class="text-cream/50 leading-relaxed">
            We never rush coats. Plaster needs time — and cutting that time shows. We take what each finish requires, no shortcuts.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-cream relative">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-px h-16 bg-gradient-to-b from-stone to-transparent"></div>

    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="text-charcoal mb-4">Not Sure Which Finish Is Right?</h2>
      <p class="text-charcoal/60 mb-10 max-w-xl mx-auto leading-relaxed">
        Visit our Material Library to see every finish at full scale. Touch the textures. See how light plays across each surface. We'll help you choose.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/showroom"
          class="group relative inline-block px-10 py-5 bg-charcoal text-cream font-medium tracking-[0.1em] uppercase text-sm overflow-hidden transition-all duration-500 hover:shadow-[0_8px_30px_rgba(45,42,38,0.3)]"
        >
          <span class="relative z-10 flex items-center justify-center gap-3">
            Visit Material Library
            <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </span>
          <div class="absolute inset-0 bg-bronze transform -translate-x-full group-hover:translate-x-0 transition-transform duration-500"></div>
        </a>

        <a
          href="/contact"
          class="group inline-block px-10 py-5 border border-charcoal/30 text-charcoal tracking-[0.1em] uppercase text-sm hover:bg-charcoal hover:text-cream transition-all duration-300"
        >
          <span class="flex items-center justify-center gap-3">
            Request Consultation
            <svg class="w-4 h-4 opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </span>
        </a>
      </div>
    </div>
  </section>
</Layout>
